<div class="row small-up-1 medium-up-2 card-grid">
  <% results.each do |result| %>
    <div class="column">
      <article class="card card--result">
        <div class="card__content">
          <%= link_to result, class: "card__link" do %>
            <h5 class="card__title"><%= translated_attribute result.title %></h5>
          <% end %>
          <%== translated_attribute result.short_description %>
          <%= render partial: "tags", locals: { result: result } %>
        </div>
        <div class="card__footer">
          <ul class="card-data">
            <li class="card-data__item">
              <span class="card-data__item__number">130</span>propostes
            </li>
            <li class="card-data__item">
              <span class="card-data__item__number">27</span>suports
            </li>
            <li class="card-data__item">
              <span class="card-data__item__number">2567</span>comentaris
            </li>
          </ul>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= decidim_paginate results, order_start_time: params[:order_start_time], scope_id: params[:scope_id] %>
