<% content_for :heading do %>
  Typography
<% end %>

<% content_for :description do %>
  <p>These guidelines summarize how use typography at Decidim, and serve as guardrails for designers to design freely with best typographic practices in mind</p>
<% end %>

<% content_for :toc do %>
  <a href="#typefaces">Typefaces</a>
  <a href="#headings">Headings</a>
  <a href="#content">Content</a>
  <a href="#readability">Readability</a>
<% end %>

<section id="typefaces" class="[&>*+*]:mt-6">
  <h2 class="text-3xl font-semibold">Typefaces</h2>

  <p>Decidim uses Source Sans Pro as primary typeface. This typeface supports 310 languages</p>

  <p>This fonts are licensed under the Open Font License</p>

  <table class="mt-4 w-full text-sm text-gray-2">
    <thead class="bg-gray-3">
      <th class="px-6 py-2 font-normal border border-background">Example</th>
    </thead>
    <tbody>
      <tr>
        <td class="px-6 py-4 border border-background text-lg font-bold">Source Sans Pro Bold</td>
      </tr>
      <tr>
        <td class="px-6 py-4 border border-background text-lg font-semibold">Source Sans Pro Semibold</td>
      </tr>
      <tr>
        <td class="px-6 py-4 border border-background text-lg font-normal">Source Sans Pro Regular</td>
      </tr>
    </tbody>
  </table>
</section>

<section id="headings">
  <h2 class="text-3xl font-semibold">Headings</h2>

  <table class="mt-4 w-full text-sm text-gray-2">
    <thead class="bg-gray-3">
      <th class="px-6 py-2 font-normal border border-background">Level</th>
      <th class="px-6 py-2 font-normal border border-background">Semibold 600</th>
      <th class="px-6 py-2 font-normal border border-background">Bold 700</th>
      <th class="px-6 py-2 font-normal border border-background">Size</th>
    </thead>
    <tbody>
      <%
        rows = []
        rows << { level: "Hero H1", text: "Hero heading", size: "text-5xl" }
        rows << { level: "H1", text: "Heading H1", size: "text-4xl" }
        rows << { level: "H2", text: "Heading H2", size: "text-3xl" }
        rows << { level: "H3", text: "Heading H3", size: "text-2xl" }
        rows << { level: "H4", text: "Heading H4", size: "text-xl" }
        rows << { level: "H5", text: "Heading H5", size: "text-lg" }
        rows << { level: "H6", text: "Heading H6", size: "text-md" }

        rows.each_with_index do |row, ix|
      %>
        <tr>
          <td class="px-6 py-4 border border-background text-center"><%= row[:level] %></td>
          <td class="px-6 py-4 border border-background font-semibold <%= row[:size] %>"><%= row[:text] if ix.positive? %></td>
          <td class="px-6 py-4 border border-background font-bold <%= row[:size] %>"><%= row[:text] %></td>
          <td class="px-6 py-4 border border-background text-secondary underline text-center"><%= row[:size] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section id="content">
  <h2 class="text-3xl font-semibold">Content</h2>

  <table class="mt-4 w-full text-sm text-gray-2">
    <thead class="bg-gray-3">
      <th class="px-6 py-2 font-normal border border-background">Regular 400</th>
      <th class="px-6 py-2 font-normal border border-background">Semibold 600</th>
      <th class="px-6 py-2 font-normal border border-background">Bold 700</th>
      <th class="px-6 py-2 font-normal border border-background">Size</th>
    </thead>
    <tbody>
      <%
        rows = []
        rows << { text: "Sample content", size: "text-xl" }
        rows << { text: "Sample content", size: "text-lg" }
        rows << { text: "Sample content", size: "text-md" }
        rows << { text: "Sample content", size: "text-sm" }
        rows << { text: "Sample content", size: "text-xs" }

        rows.each do |row|
      %>
        <tr>
          <td class="px-6 py-4 border border-background font-normal <%= row[:size] %>"><%= row[:text] %></td>
          <td class="px-6 py-4 border border-background font-semibold <%= row[:size] %>"><%= row[:text] %></td>
          <td class="px-6 py-4 border border-background font-bold <%= row[:size] %>"><%= row[:text] %></td>
          <td class="px-6 py-4 border border-background text-secondary underline text-center"><%= row[:size] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<section id="readability">
  <h2 class="text-3xl font-semibold">Readability</h2>

  <table class="mt-4 w-full text-center ext-sm text-gray-2">
    <thead class="bg-gray-3">
      <th class="px-6 py-2 font-normal border border-background">Size</th>
      <th class="px-6 py-2 font-normal border border-background">Layout cols</th>
      <th class="px-6 py-2 font-normal border border-background">~ Characters per line</th>
    </thead>
    <tbody>
      <%
        rows = []
        rows << { size: "text-xl", layout: 6, chars: 81 }
        rows << { size: "text-lg", layout: 6, chars: 90 }
        rows << { size: "text-md", layout: 5, chars: 84 }
        rows << { size: "text-sm", layout: 4, chars: 76 }

        rows.each do |row|
      %>
        <tr>
          <td class="px-6 py-4 border border-background text-secondary underline"><%= row[:size] %></td>
          <td class="px-6 py-4 border border-background"><%= row[:layout] %></td>
          <td class="px-6 py-4 border border-background"><%= row[:chars] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
