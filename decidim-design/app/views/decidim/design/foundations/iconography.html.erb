<% content_for :heading do %>
  <%= t("decidim.design.foundations.iconography.title") %>
<% end %>

<% content_for :description do %>
  <p><%= t("decidim.design.foundations.iconography.description_iconography") %></p>
  <p><%= t("decidim.design.foundations.iconography.description_iconography_html", iconography_link: link_to("https://remixicon.com", target: "_blank", rel: "noopener noreferrer")) %></p>
<% end %>

<% content_for :toc do %>
  <% iconography_sections.each do |section| %>
    <%= link_to(section_text(section), "##{section[:id]}") %>
  <% end %>
<% end %>

<%= render partial: "decidim/design/shared/sections", locals: { sections: iconography_sections } %>
