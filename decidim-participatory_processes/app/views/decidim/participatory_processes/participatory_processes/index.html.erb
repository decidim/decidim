<% add_decidim_meta_tags(title: t("participatory_processes.index.title", scope: "decidim")) %>

<%
edit_link(
  decidim_admin_participatory_processes.participatory_processes_path,
  :read,
  :process_list
)
%>

<% content_for :css_content do %>
  <%= stylesheet_pack_tag "decidim_participatory_processes", media: "all" %>
<% end %>

<% content_for :js_content do %>
  <%= javascript_pack_tag "decidim_participatory_processes" %>
<% end %>

<% content_for :aside do %>
  <h1 class="h3 md:h1 decorator"><%= t("decidim.menu.processes") %></h1>

  <%= render partial: "decidim/shared/filters" %>
<% end %>

<%= render layout:"layouts/decidim/shared/layout_two_col" do %>

  <%= redesigned_participatory_space_floating_help %>

  <% if promoted_collection.any? %>
    <section id="highlighted-processes" class="card__highlight-container">
      <h2 class="h5 md:h3 decorator"><%= t("participatory_processes.index.promoted_processes", scope: "layouts.decidim") %></h2>

      <% promoted_collection.each do |promoted_item| %>
        <%= render_highlighted_partial_for promoted_item %>
      <% end %>
    </section>
  <% end %>

  <section id="processes-grid" class="card__grid-container">
    <h2 class="h5 md:h3 decorator"><%= t("active", scope: "decidim.participatory_processes.participatory_processes.filters.counters", count: collection.total_count) %></h2>

    <div class="card__grid-grid">
      <%= render(collection) %>
    </div>

    <%= decidim_paginate collection %>
  </section>
<% end %>
