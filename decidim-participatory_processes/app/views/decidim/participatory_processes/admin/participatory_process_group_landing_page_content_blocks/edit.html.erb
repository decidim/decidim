<%= decidim_form_for(@form, html: { class: "form edit_content_block" }, url: participatory_process_group_landing_page_content_block_path(participatory_process_group, params[:id])) do |form| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t content_block.public_name_key %></h2>
    </div>
    <div class="card-section">
      <%= cell content_block.settings_form_cell, form, content_block: content_block %>
    </div>
  </div>
  <div class="button--double form-general-submit">
    <%= form.submit t("participatory_process_group_landing_page_content_blocks.edit.update", scope: "decidim.admin") %>
  </div>
<% end %>
