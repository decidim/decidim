<% add_decidim_page_title t("participatory_process_types.edit.title", scope: "decidim.admin") %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("participatory_process_types.edit.title", scope: "decidim.admin") %>
  </h2>
</div>
<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("participatory_process_types.edit.title", scope: "decidim.admin"), edit_participatory_process_type_path(participatory_process_type_path, anchor: t("participatory_process_types.edit.title", scope: "decidim.admin")), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form edit_participatory_process_type" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("participatory_process_types.edit.update", scope: "decidim.admin"), class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
