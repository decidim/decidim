<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("participatory_process_steps.new.title", scope: "decidim.admin") %>
  </h2>
</div>

<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("participatory_process_steps.new.title", scope: "decidim.admin"), new_participatory_process_step_path(current_participatory_process, anchor: "title"), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults new_participatory_process_step" }) do |f| %>
      <%= render partial: "form", object: f, locals: { title: t("participatory_process_steps.new.title", scope: "decidim.admin") } %>

      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("participatory_process_steps.new.create", scope: "decidim.admin"), class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
