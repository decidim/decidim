<% content_for :breadcrumb_context_menu do %>
  <div class="process-title-content-breadcrumb-container-right">
    <% if allowed_to? :create, :process_group %>
      <%= link_to [:new, :participatory_process_group], class: "process-title-content-breadcrumb-container-right-link" do %>
        <%= icon "add-line" %>
        <span>
          <%= t("actions.new_process_group", scope: "decidim.admin") %>
        </span>
      <% end %>
    <% end %>
  </div>
<% end %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t "participatory_process_groups.new.title", scope: "decidim.admin" %>
  </h2>
</div>
<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("title", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), [:new, :participatory_process_group], anchor: t("title", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), class: "item__edit-menu-anchor" %>
      <%= link_to t("metadata", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), [:new, :participatory_process_group], anchor: t("metadata", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), class: "item__edit-menu-anchor" %>
      <%= link_to t("visibility", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), [:new, :participatory_process_group], anchor: t("visibility", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), class: "item__edit-menu-anchor" %>
    </div>
  </div>
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form new_participatory_process_group" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
        <%= f.submit t("participatory_process_groups.new.create", scope: "decidim.admin"), class: "button button__sm md:button__lg button__secondary" %>
      </div>
    <% end %>
  </div>
</div>
