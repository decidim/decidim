<% add_decidim_page_title t("participatory_process_groups.edit.title", scope: "decidim.admin") %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t "participatory_process_groups.edit.title", scope: "decidim.admin" %>

    <% if allowed_to? :destroy, :process_group, process_group: participatory_process_group %>
      <%= link_to t("decidim.admin.actions.destroy"), participatory_process_group, method: :delete, class: "button button__sm button__secondary destroy ml-auto", data: { confirm: t("decidim.admin.actions.confirm_destroy") } %>
    <% end %>
  </h2>
</div>
<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("title", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), decidim_admin_participatory_processes.edit_participatory_process_group_path(participatory_process_group, anchor: "title"), class: "item__edit-menu-anchor" %>
      <%= link_to t("metadata", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), decidim_admin_participatory_processes.edit_participatory_process_group_path(participatory_process_group, anchor: "metadata"), class: "item__edit-menu-anchor" %>
      <%= link_to t("visibility", scope: "decidim.participatory_processes.admin.participatory_process_groups.form"), decidim_admin_participatory_processes.edit_participatory_process_group_path(participatory_process_group, anchor: "visibility"), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form edit_participatory_process_group" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("participatory_process_groups.edit.update", scope: "decidim.admin"), class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
