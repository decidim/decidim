<dl>
  <%= display_for participatory_process,
    :title,
    :subtitle,
    :hashtag,
    :slug,
    :short_description,
    :description,
    :meta_scope,
    :developer_group,
    :local_area,
    :target,
    :participatory_scope,
    :participatory_structure
  %>

  <dt><%= display_label(participatory_process, :end_date) %></dt>
  <dd>
    <% if participatory_process.end_date %>
      <%=  l(participatory_process.end_date, format: :long) %>
    <% end %>
  </dd>

  <dt><%= display_label(participatory_process, :hero_image) %></dt>
  <dd>
    <% if participatory_process.hero_image? %>
      <%= image_tag participatory_process.hero_image.url.to_s %>
    <% end %>
  </dd>

  <dt><%= display_label(participatory_process, :banner_image) %></dt>
  <dd>
    <% if participatory_process.banner_image? %>
      <%= image_tag participatory_process.banner_image.url.to_s %>
    <% end %>
  </dd>

  <dt><%= display_label(participatory_process, :promoted) %></dt>
  <dd><%= humanize_boolean participatory_process.promoted? %></dd>

  <dt><%= display_label(participatory_process, :scope) %></dt>
  <% if participatory_process.scope %>
    <dd><%= participatory_process.scope.name %></dd>
  <% else %>
    <dd><%= t("decidim.participatory_processes.scopes.global") %></dd>
  <% end %>

  <dt><%= display_label(participatory_process, :participatory_process_group) %></dt>
  <% if participatory_process.participatory_process_group %>
    <dd><%= translated_attribute participatory_process.participatory_process_group.name %></dd>
  <% else %>
    <dd><%= t("decidim.participatory_processes.participatory_process_groups.none") %></dd>
  <% end %>
</dl>
