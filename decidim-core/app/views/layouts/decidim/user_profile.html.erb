<%= render "layouts/decidim/application" do %>
  <main class="wrapper">
    <div class="row collapse">
      <div class="columns">
        <h1 class="heading1 user-header"><%= t(".title") %></h1>
      </div>
    </div>
    <div class="row collapse">
      <div class="main-container">
        <div class="row collapse main-container--side-panel">
          <div class="columns medium-4 large-3">
            <div class="side-panel">
              <ul class="tabs vertical side-panel__tabs" id="user-settings-tabs">
                <%= user_profile_tab t(".account"), account_path %>
                <% if handlers.any? || authorizations.any? %>
                  <%= user_profile_tab t(".authorizations"), authorizations_path %>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="columns medium-8 large-9">
            <div class="main-container__content">
              <div class="tabs-content vertical" aria-hidden="false">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<% end %>
