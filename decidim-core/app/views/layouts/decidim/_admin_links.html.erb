<% if redesign_enabled? %>
  <div class="admin-bar__container">
    <div class="admin-bar">
      <div class="admin-bar__block">
        <span class="admin-bar__title"><%= t("decidim.admin.titles.panel") %></span>
        <%# <%= link_to decidim_admin.root_path, class: "admin-bar__button" do %1> %>
        <%= link_to decidim_admin.root_path, class: "main-nav__link" do %>
          <span><%= t("layouts.decidim.user_menu.admin_dashboard") %></span>
          <%= icon "equalizer-line" %>
        <% end %>
      </div>
      <div class="main-nav__link">
      <%# <div class="admin-bar__block"> %>
        <%= content_for(:extra_admin_link) if content_for?(:extra_admin_link) %>
        <%= content_for(:edit_link) if content_for?(:edit_link) %>
      </div>
    </div>
  </div>
<% else %>
  <div class="main-nav__link">
    <%= content_for(:extra_admin_link) if content_for?(:extra_admin_link) %>
    <%= content_for(:edit_link) if content_for?(:edit_link) %>
  </div>
<% end %>
