<% main_enabled = true unless local_assigns.has_key?(:main_enabled) %>
<% main_tag = redesign_enabled? && main_enabled ? :main : :div %>
<% columns ||= 6 %>
<% css_class = columns == 10 ? "cols-10" : columns == 8 ? "cols-8" : "cols-6" %>

<%= content_tag main_tag, class: "layout-1col #{css_class}" do %>
  <%= yield %>
<% end %>
