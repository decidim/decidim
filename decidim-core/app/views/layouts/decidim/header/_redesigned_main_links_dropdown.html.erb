<li>
  <%= link_to decidim.account_path, class: "p-2 gap-x-2 flex items-center" do %>
    <%= icon "user-smile-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
    <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.profile") %></span>
  <% end %>
</li>
<li>
  <%= link_to decidim.profile_path(current_user.nickname), class: "p-2 gap-x-2 flex items-center" do %>
    <%= icon "account-circle-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
    <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.public_profile") %></span>
  <% end %>
</li>
<li>
  <%= link_to decidim.notifications_path, class: "p-2 gap-x-2 flex items-center" do %>
    <%= icon "notification-3-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
    <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.notifications") %></span>
  <% end %>
</li>
<li>
  <%= link_to decidim.conversations_path, class: "p-2 gap-x-2 flex items-center" do %>
    <%= icon "mail-send-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
    <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.conversations") %></span>
  <% end %>
</li>
<% if allowed_to? :read, :admin_dashboard %>
  <li>
    <%= link_to decidim_admin.root_path, class: "p-2 gap-x-2 flex items-center" do %>
      <%= icon "dashboard-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
      <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.admin_dashboard") %></span>
    <% end %>
  </li>
<% end %>
<li>
  <%= link_to decidim.destroy_user_session_path, method: :delete, class: "p-2 gap-x-2 flex items-center" do %>
    <%= icon "logout-box-r-line", class: "w-4 h-4 flex-none text-gray fill-current" %>
    <span class="text-secondary text-sm"><%= t("layouts.decidim.user_menu.sign_out") %></span>
  <% end %>
</li>
