<div id="main-bar" class="main-bar__container">
  <div class="main-bar">
    <div class="main-bar__logo">
      <%= render partial: "layouts/decidim/logo", locals: { organization: current_organization } %>
    </div>
    <div class="main-bar__search">
      <%= render partial: "layouts/decidim/header/redesigned_main_search" %>
    </div>
    <div class="main-bar__links-desktop">
      <%= render partial: "layouts/decidim/header/redesigned_main_links_desktop" %>
    </div>

    <div class="xl:hidden">
      <%# Sticky menu mobile %>
      <div class="main-bar__links-mobile">
        <%= render partial: "layouts/decidim/header/redesigned_main_links_mobile" %>
      </div>

      <%# Main dropdown mobile %>
      <div data-component="accordion">
        <div id="main-dropdown-summary-mobile" class="main-bar__links-mobile__trigger"
          data-controls="panel-dropdown-account-mobile">
          <%= icon "menu-line" %><span><%= "menu" %></span>
        </div>

        <div id="panel-dropdown-account-mobile" class="main-bar__links-mobile__dropdown" aria-hidden="true">
          <%= render partial: "layouts/decidim/header/redesigned_menu_breadcrumb_main_dropdown" %>
        </div>
      </div>
    </div>
  </div>
</div>
