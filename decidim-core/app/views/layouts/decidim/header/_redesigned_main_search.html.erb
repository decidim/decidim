<%= form_tag(decidim.search_path, method: :get, id: "form-search_topbar") do %>
  <span>
    <label>
      <span class="sr-only"><%= t("decidim.search.term_input_placeholder") %></span>
      <input type="text" class="reset-defaults" placeholder="<%= t("decidim.search.term_input_placeholder") %>">
    </label>
    <button type="submit" aria-label="<%= t("decidim.search.term_input_placeholder") %>">
      <%= icon "search-line" %>
    </button>
  </span>
<% end %>
