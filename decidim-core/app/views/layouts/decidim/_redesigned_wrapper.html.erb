<div class="flex flex-col min-h-screen">
  <header>
    <%= render partial: "layouts/decidim/redesigned_header" %>
  </header>
  <main class="grow">
    <!-- DEBUG HELPER -->
    <script>function toggleCSS() {
      const node = document.querySelector("[rel=stylesheet][href*='/decidim_core']")
      node.getAttribute('disabled') === "true" ? node.removeAttribute('disabled') : node.setAttribute('disabled', "true")
    }</script>
    <div class="container">
      <label class="cursor-pointer" for="tcss"><input type="checkbox" name="tcss" id="tcss" onclick="toggleCSS()">Hide old CSS stylesheet</label>
    </div>

    <%= yield %>
  </main>
  <footer class="bg-primary">
    <%= render partial: "layouts/decidim/redesigned_footer" %>
  </footer>
</div>
