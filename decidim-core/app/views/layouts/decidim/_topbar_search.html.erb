<div class="show-for-medium" data-set="nav-search-holder">
  <div class="topbar__search js-append">
    <%= form_tag(decidim.search_path, method: :get, id: "form-search_topbar") do %>
      <%= label_tag :term do %>
        <%= text_field_tag :term, nil, class: "m-none", placeholder: t("decidim.search.term_input_placeholder"), title: t("decidim.search.term_input_placeholder") %>
      <% end %>
      <%= label_tag :submit do %>
        <%= submit_tag icon("magnifying-glass", aria_label: t("decidim.search.term_input_placeholder"), role: "img"), title: t("decidim.search.term_input_placeholder"), id: :submit %>
      <% end %>
    <% end %>
  </div>
</div>
