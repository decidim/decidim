<%= render partial: "layouts/decidim/meta_tags_config" %>
<!DOCTYPE html>
<html lang="<%= I18n.locale %>" class="no-js">
  <head>
    <title><%= decidim_page_title %></title>
    <%= render partial: "layouts/decidim/redesigned_head" %>
  </head>

  <body class="text-black text-md form-defaults">
    <!--noindex--><!--googleoff: all-->
    <%= cell("decidim/data_consent", current_organization) %>
    <%= render partial: "layouts/decidim/impersonation_warning" %>
    <%= render partial: "layouts/decidim/omnipresent_banner" %>
    <%= render partial: "layouts/decidim/redesigned_timeout_modal" %>
    <%= render partial: "layouts/decidim/offline_banner" %>
    <!--googleon: all--><!--/noindex-->

    <%= render "layouts/decidim/redesigned_wrapper" do %>
      <%= yield %>
    <% end %>

    <%= render partial: "decidim/shared/redesigned_confirm_modal" %>
    <%= render partial: "decidim/shared/redesigned_login_modal" unless current_user %>
    <%= render partial: "decidim/shared/redesigned_authorization_modal" %>
    <%= render partial: "decidim/shared/redesigned_share_modal" %>
    <%= render partial: "layouts/decidim/redesigned_js_configuration" %>
    <%= render partial: "layouts/decidim/cors" if Decidim.cors_enabled %>
    <%= render partial: "layouts/decidim/data_consent_warning" %>

    <%= yield :js_content %>
    <%= snippets.display(:foot) %>
  </body>
</html>
