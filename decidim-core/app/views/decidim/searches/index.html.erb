<main class="wrapper">
  <div class="row columns">
    <h2 id="results-count" class="section-heading">
      <%= render partial: "count" %>
    </h2>
  </div>
  <div class="row">
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
      <div class="collection-sort-controls row small-up-1 medium-up-3 card-grid">
        <div class="column">
          <%= render partial: "decidim/shared/results_per_page" %>
        </div>
      </div>
    <div id="results" class="columns mediumlarge-8 large-9">
      <%= render partial: "results" %>
      <%= paginate @results, theme: "decidim" %>
    </div>
  </div>
</main>
<%= javascript_include_tag("decidim/filters") %>
<%= javascript_include_tag "decidim/orders" %>
