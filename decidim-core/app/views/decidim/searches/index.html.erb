<% add_decidim_page_title(t("term_input_placeholder", scope: "decidim.search")) %>

<% content_for :header_snippets do %>
  <meta name="robots" content="noindex">
<% end %>

<% content_for :aside do %>
  <%= render partial: "filters" %>
<% end %>

<%= render layout: "layouts/decidim/shared/layout_two_col" do %>

  <section id="search-count" class="layout-main__section">
    <%= render partial: "count" %>
  </section>

  <section id="results" class="layout-main__section">
    <%= cell "decidim/search_results", @sections, params: %>
  </section>

<% end %>
