<div id="<%= picker_options[:id] %>" class="data-picker <%= picker_options[:class] %>" data-picker-name="<%= picker_options[:name] %>">
  <% unless checkboxes_on_top %>
    <div class="picker-prompt"><a href="<%= prompt_params[:url] %>" role="button" aria-label="<%= t(".select_scope", current: prompt_params[:text]) %>"><%= prompt_params[:text] %></a></div>
  <% end %>
  <div class="picker-values"><% scopes.each do |scope, params| %>
    <div>
      <% if picker_options[:multiple] %>
        <a href="<%= params[:url] %>" data-picker-value="<%= scope.id %>" class="label primary">&times;&nbsp;<%= params[:text] %></a></div>
      <% else %>
        <a href="<%= params[:url] %>" data-picker-value="<%= scope.id %>"><%= params[:text] %></a>
      <% end %>
  <% end %></div>
  <% if checkboxes_on_top && (picker_options[:multiple] || scopes.length < 1) %>
    <div class="picker-prompt"><a href="<%= prompt_params[:url] %>" role="button" aria-label="<%= t(".select_scope", current: prompt_params[:text]) %>"><%= prompt_params[:text] %></a></div>
  <% end %>
</div>
