  <div id="confirm-modal-content">
    <button type="button" data-dialog-close="confirm-modal" data-dialog-closable="" aria-label="<%= t("close_modal", scope: "decidim.shared.confirm_modal") %>">Ã—</button>

    <div data-dialog-container>
