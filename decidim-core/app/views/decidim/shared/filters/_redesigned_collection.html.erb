<div class="filter-container">
    <button id="trigger-menu-<%= id %>" data-controls="panel-dropdown-menu-<%= id %>" data-open="true">
        <%= icon "arrow-down-s-line" %>
        <%= icon "arrow-up-s-line" %>
        <span><%= t(id, scope: label_scope) %></span>
    </button>
    <div id="panel-dropdown-menu-<%= id %>">
        <%= form.send(
            "collection_#{builder_type}",
            method,
            collection,
            :first,
            :last
        ) do |builder|
            builder.label { builder.send(builder_type.singularize, class: "reset-defaults" , hidden: true) + content_tag(:div, builder.text, class: "filter" ) }
        end %>
  </div>
</div>
