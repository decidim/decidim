<p><%= @event_instance.email_moderation_intro %>
  <% if @is_proposal %>
    <em><%= translated_attribute(@parent_title) %></em> <!-- Translate title if object is a proposal -->
  <% else %>
   <em><%= @parent_title %></em>
  <% end %>
</p>
<div class="email-card">
  <h6 class="content-title"> <%= @resource_title %> </h6>

  <p> <%= @body %> </p>
</div>
<br/>
<!-- link to show  -->
<p>
  <%= @event_instance.email_url %>
</p>

<!-- link to dashboard moderation  -->
<p>
  <%= @event_instance.email_moderation_url(@moderation_url) if @moderation %>
</p>
