<div class="wrapper external-link-page-content">
  <h1 class="text-center"><%= t("decidim.links.warning.title") %></h1>
  <div class="row columns large-centered large-8">
    <div class="card">
      <div>
        <%= render partial: "warning" %>
        <div class="card-section">
          <div class="card external-link-url">
            <div class="card__content text-center">
              <%= highlight_domain %>
            </div>
          </div>
          <div class="row">
            <div class="columns large-12 text-center">
              <%= link_to t("decidim.links.warning.proceed"), external_url.to_s, class: "button expanded primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
