<div class="wrapper">
  <div class="row">
    <h1 class="section-heading"><%= t(".last_activity") %></h1>

    <div class="columns mediumlarge-4 large-3">
      <div class="card card--secondary show-for-mediumlarge">
        <%= filter_form_for filter, last_activities_path do |form| %>
          <div class="filters__section">
            <div class="filters__search">
              <div class="input-group">
                <%= form.search_field :search_text, label: false, class: "input-group-field", placeholder: t(".search") %>
                <div class="input-group-button">
                  <button type="submit" class="button button--muted">
                    <%= icon "magnifying-glass", aria_label: t(".search") %>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <%#= form.collection_radio_buttons :resource_type, @resource_types, :first, :last, legend_title: t(".resource_type") %>
        <% end %>
      </div>
    </div>
    <div id="activities" class="columns mediumlarge-8 large-9">
      <%= render partial: "activities" %>
    </div>
  </div>
</div>

<%= javascript_include_tag("decidim/filters") %>
