<% add_decidim_page_title(t(".invite_user")) %>

<%= render layout: "layouts/decidim/shared/layout_center" do %>
  <div class="text-center py-10">
    <h1 class="h3 md:h1 decorator inline-block text-left mb-12">
      <%= t("invite_user", scope: "decidim.group_invites.index") %>
    </h1>
  </div>

  <%= decidim_form_for(@form, url: group_invites_path(@user_group.nickname)) do |f| %>
    <%= form_required_explanation %>

    <div class="form__wrapper">
      <%= f.text_field :nickname %>
    </div>

    <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
      <%= link_to t("cancel", scope: "decidim.shared.confirm_modal"), profile_members_path(nickname: @user_group.nickname), class: "button button__sm md:button__lg button__text-secondary" %>

      <button type="submit" class="button button__sm md:button__lg button__secondary">
        <span><%= t("invite", scope: "decidim.group_invites.index") %></span>
        <%= icon "arrow-right-line" %>
      </button>
    </div>
  <% end %>
<% end %>
