<article class="card card--full card--process">
  <div class="row collapse card--process__row">
    <div class="columns mediumlarge-8 large-6 card--process__column">
      <div class="card__content">
        <%= link_to participatory_process_path(hero_process), class: "card__link" do %>
          <h2 class="card__title"><%= translated_attribute hero_process.title %></h2>
        <% end %>
        <%== truncate(translated_attribute(hero_process.description), length: 630, separator: ' ') %>
        <%= link_to participatory_process_path(hero_process), class: "button secondary small hollow card__button" do %>
          <%= t(".more_info", scope: "layouts") %>
        <% end %>
      </div>
    </div>
    <div class="columns mediumlarge-8 large-6 card--process__column">
      <div class="card--full__image"
           style="background-image:url(<%= hero_process.hero_image.url %>">
        <div class="card__content row collapse">
          <div class="large-6 large-offset-6 columns">
            <%= link_to participatory_process_path(hero_process), class: "button expanded button--sc" do %>
              <%= t(".take_part", scope: "layouts") %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
