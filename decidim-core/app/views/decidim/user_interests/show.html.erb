<%= render layout: "layouts/decidim/shared/layout_user_profile" do %>
  <% add_decidim_page_title(t("my_interests", scope: "layouts.decidim.user_profile")) %>
  <% content_for(:subtitle) { t("my_interests", scope: "layouts.decidim.user_profile") } %>
  <p>
    <%= t("select_your_interests", scope: "decidim.user_interests.show") %>
  </p>
  <%= form_for(@user_interests, url: user_interests_path, method: :put, class: "user-form") do |f| %>
    <div class="form-wrapper">
      <p class="help-text">
        <%= t("my_interests", scope: "decidim.user_interests.show") %>
      </p>
      <% if @user_interests.scopes.any? %>
        <%= render partial: "scopes", locals: { scopes: @user_interests.scopes, f: f } %>
        <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
          <%= f.submit t("my_interests", scope:"decidim.user_interests.show"), class: "button button__sm md:button__lg button__secondary" %>
        </div>
      <% else %>
        <p>
          <%= t("no_scopes", scope: "decidim.user_interests.show") %>
        </p>
      <% end %>
    </div>
  <% end %>
<% end %>
