<p class="email-greeting"><%= t(".hello", username: @user.name) %></p>

<p class="email-instructions"><%= t(
                                    ".body",
                                    organization_name: organization_name(@organization),
                                    date_account_creation: @user.created_at.strftime("%Y-%m-%d"),
                                    date_last_connection: @user.current_sign_in_at&.strftime("%Y-%m-%d") || t(".never_logged_in"),
                                    days: @days_before_deletion,
                                    login_url: link_to(t(".log_in"), decidim.new_user_session_url(host: @organization.host))
                                  ).html_safe %></p>
<p class="email-closing">
  <%= t(".greetings", organization_name: organization_name(@user.organization), organization_url: decidim.root_url(host: @user.organization.host)).html_safe %>
</p>
