<li class="<%= "timeline__item #{status_class_for(step)}" %>">
  <div class="timeline__phase">
    <span class="timeline__phase__number"><%= step.position %></span>
  </div>
  <div class="timeline__info">
    <div class="timeline__header">
      <span class="timeline__date text-small">
        <%= step.start_date.strftime("%d/%m/%Y") %> - <%= step.end_date.strftime("%d/%m/%Y") %>
      </span>
      <h6 class="timeline__title heading6"><%= t('.info') %></h6>
    </div>
    <div class="timeline__content">
      <% #TODO short_description? %>
      <%= translated_attribute(step.description).html_safe %>
    </div>
  </div>
</li>
