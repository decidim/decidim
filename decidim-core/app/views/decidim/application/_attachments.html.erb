<% if attached_to.attachments.any? %>
  <div class="row attachments">
    <div class="columns large-12">
      <%= render partial: "documents", locals: { documents: attached_to.documents_without_collection } %>
    </div>
  </div>
  <div class="row attachment_collections">
    <div class="columns large-12">
      <% attached_to.documents_with_collection.group_by(&:attachment_collection).sort_by { |c, d| c.weight }.each do |collection, documents| %>
        <%= render partial: "collection", locals: { attachment_collection: collection, documents: documents } %>
      <% end %>
    </div>
  </div>
  <div class="row attachments">
    <div class="columns large-12">
      <%= render partial: "photos", locals: { photos: attached_to.photos } %>
    </div>
  </div>
<% end %>
