<div class="radio-accordion" id="radio-accordion-<%= panel_id %>">
  <label class="radio-accordion-divider">
    <input
      class="radio-accordion-radio reset-defaults"
      type="radio"
      name="<%= input_radio_name %>"
      value="<%= input_radio_value %>"
      <%= disabled ? 'disabled aria-disabled="true"' : "" %>>
    <h2 class="radio-accordion-title" id="title">
      <%= title %>
    </h2>
  </label>

  <div data-component="accordion" class="radio-accordion-section content-block__description editor-content">
    <div id="panel-title--<%= panel_id %>" aria-hidden="true">
      <%= yield %>
    </div>

    <button class="button button__sm button__text-secondary mt-6" data-controls="panel-title--<%= panel_id %>" aria-expanded="false">
      <span>
        <%= show_more_text %>
      </span>
      <%= icon "arrow-down-s-line" %>
      <span>
        <%= show_less_text %>
      </span>
      <%= icon "arrow-up-s-line" %>
    </button>
  </div>
</div>
