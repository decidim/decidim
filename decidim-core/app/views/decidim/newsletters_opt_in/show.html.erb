<main class="wrapper">
  <div class="row collapse">
    <div class="row collapse">
      <div class="columns large-8 large-centered text-center page-title">
        <h1><%= t ".header" %></h1>
      </div>
    </div>

    <div class="row">
      <div class="columns large-6 medium-10 medium-centered">
        <%= decidim_form_for @notifications_settings, url: decidim.newsletters_opt_in_update_path(token: current_user.newsletter_token), html: { method: :put, class: "register-form new_user" } do |f| %>
          <%= f.hidden_field :email_on_notification %>
          <div class="card" id="card__newsletter">
            <div class="card__content">
              <legend><%= t(".newsletter_title") %></legend>

              <fieldset>
                <div class="field">
                  <%= f.check_box :newsletter_notifications, label: t(".newsletter") %>
                </div>
              </fieldset>
            </div>
          </div>

          <div class="card">
            <div class="card__content">
              <div class="actions">
                <%= f.submit t(".button"), class: "button expanded" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
