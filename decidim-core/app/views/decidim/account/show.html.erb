<%= alert_box("", "email-confirmation-alert hide margin-bottom-1", true) %>
<% add_decidim_page_title(t("profile", scope: "layouts.decidim.user_menu")) %>
<% content_for(:subtitle) { t("profile", scope: "layouts.decidim.user_menu") } %>

<div class="row">
  <%= decidim_form_for(@account, url: account_path, method: :put, html: { autocomplete: "off" }) do |f| %>
    <input autocomplete="off" name="hidden" type="password" style="display:none;">
    <div class="columns large-4">
      <%= f.upload :avatar %>
    </div>

    <div class="columns large-8 end">
      <% if current_user.unconfirmed_email.present? %>
        <div id="email-change-pending" class="callout secondary">
          <p><strong><%= t(".email_change_verification") %></strong></p>
          <p><%= t(".email_change_body", unconfirmed_email: current_user.unconfirmed_email) %></p>
          <p id="email-change-send-again-or-cancel"
            data-resent-success="<%= t(".confirmation_email_resent_successfully", unconfirmed_email: current_user.unconfirmed_email) %>"
            data-resent-error="<%= t(".confirmation_email_resent_error") %>"
            data-cancel-success="<%= t(".cancel_email_change_successfully") %>"
            data-cancel-error="<%= t(".cancel_email_change_error") %>">
            <%== t(".email_change_send_again_or_cancel", resend_path: resend_confirmation_instructions_account_path, cancel_path: cancel_email_change_account_path) %>
          </p>
        </div>
      <% end %>

      <%= form_required_explanation %>

      <%= f.text_field :name %>
      <%= f.text_field :nickname %>
      <%= f.email_field :email, disabled: current_user.unconfirmed_email.present? %>
      <%= f.url_field :personal_url %>
      <%= f.text_area :about, rows: 5 %>

      <%= f.collection_select(
            :locale,
            @account.organization.available_locales,
            :to_s,
            ->(locale) {locale_name(locale) }
          ) %>
      <p class="help-text"><%= t(".available_locales_helper") %></p>

      <% if @account.errors[:password].any? || @account.errors[:password_confirmation].any? %>
        <%= render partial: "password_fields", locals: { form: f } %>
      <% else %>
        <% if current_organization.sign_in_enabled? %>
          <p>
            <button type="button" data-toggle="passwordChange" class="link change-password"><%= t ".change_password" %></button>
          </p>
          <div id="passwordChange" class="toggle-show" data-toggler=".is-expanded">
            <%= render partial: "password_fields", locals: { form: f } %>
          </div>
        <% end %>
      <% end %>

      <%= f.submit t(".update_account") %>
    </div>
  <% end %>
</div>
