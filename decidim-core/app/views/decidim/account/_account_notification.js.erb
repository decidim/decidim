var hideExistingNotification = document.querySelector("main").children[0]
if (hideExistingNotification.classList.contains("flash") && hideExistingNotification.classList.contains("callout")) {
  hideExistingNotification.classList.add("hide");
}

var accountNotification = document.querySelector(".account-notification");
document.querySelector("main").prepend(accountNotification);

if (accountNotification.querySelector(".account-message")) {
  accountNotification.querySelector(".account-message").remove();
}
var messageDiv = document.createElement("div");
messageDiv.classList.add("account-message")

accountNotification.appendChild(messageDiv);
messageDiv.innerHTML = "<%= @text %>";

accountNotification.classList.add("<%= @alert_class %>")
accountNotification.classList.remove("hide");
accountNotification.removeAttribute("style");
