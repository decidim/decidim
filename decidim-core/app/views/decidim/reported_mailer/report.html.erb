<p><%= t(".hello", name: @user.name) %></p>

<p>
  <%= t(".report_html", { url: reported_content_url }) %>
</p>

<br>

<p><b><%= t(".participatory_space") %></b></p>
<p><%= translated_attribute @participatory_space.title %></p>

<p><b><%= t(".reason") %></b></p>
<p><%= @report.reason %></p>

<p><b><%= t(".details") %></b></p>
<blockquote>
  <%= @report.details %>
</blockquote>

<p><b><%= t(".content") %></b></p>
<% if @content_title || @content_body %>
  <blockquote>
    <h5><%= @content_title %></h5>
    <p><%= @content_body %></p>
  </blockquote>
<% end %>

<p><b><%= t(".user") %></b></p>
<p><%= link_to @report.user.name, user_profile_url, target: :blank %></p>

<br>

<table class="button radius" style="margin: 16px auto;">
  <tr>
    <td>
      <table>
        <tr>
          <td>
            <%= link_to t(".manage_moderations"), manage_moderations_url, class: "button",  target: "_blank" %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
