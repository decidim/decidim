<% add_decidim_page_title(t("conversations", scope: "layouts.decidim.user_menu")) %>

<% content_for :aside do %>
  <div class="conversation__aside">
    <h1 class="h3 md:h1 decorator">
      <%= t("decidim.messaging.conversations.index.title") %>
    </h1>
    <%= render partial: "new_conversation_button" %>
  </div>
<% end %>

<%= render layout:"layouts/decidim/shared/layout_two_col" do %>
  <% if validation_messages.present? %>
    <% validation_messages.each do |message| %>
      <%= cell("decidim/announcement", message) %>
    <% end %>
  <% else %>
    <div class="conversation__container">
      <%= render partial: "conversation", collection: @conversations %>
    </div>
  <% end %>
<% end %>
