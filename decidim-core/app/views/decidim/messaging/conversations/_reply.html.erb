<%= decidim_form_for form, url: decidim.conversation_path(conversation.id), method: :put, remote: true do |f| %>
  <div class="flex flex-col gap-4 w-2/3 mx-auto">
    <%= f.label :body, nil, class: "sr-only" %>
    <!-- TODO: meter el input_emoji -->
    <%= f.text_area :body, label: false, rows: 4, required: true, autofocus: true, placeholder: t(".placeholder"), class: "border border-gray rounded px-4 py-2" %>

    <%= f.submit "#{t(".send")} #{icon "arrow-right-line", class: "fill-current"}".html_safe, class: "button sm secondary self-end" %>
  </div>
<% end %>
