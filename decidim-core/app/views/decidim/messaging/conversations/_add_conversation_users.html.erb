<div class="conversation__modal-form-container">
  <%= icon "question-answer-line", class: "w-6 h-6 text-gray fill-current flex-none" %>
  <div>
    <h2 id="dialog-title-conversation" class="conversation__modal-form-title"><%= t(".modal_title") %></h2>
    <div class="form__wrapper">
      <label for="add_conversation_users" class="conversation__modal-form multiple-mentions" data-name="recipient_id[]" data-multiple="true">
        <%= t("decidim.metrics.participants.title") %>
        <span class="help-text"><%= t(".add_max_users") %></span>
        <input id="add_conversation_users" type="text"
            spellcheck="false"
            autocomplete="off"
            placeholder="<%= t(".add_users_placeholder") %>"
            data-noresults="<%= t(".no_results") %>"
            data-selected="multiple-mentions-selected"
            contenteditable="true"
            data-direct-messages-disabled="<%= t("decidim.messaging.conversations.add_conversation_users.participant_with_disabled_message_reception") %>">
      </label>
    </div>
    <ul class="conversation__modal-form-results multiple-mentions-selected"></ul>
  </div>
</div>
