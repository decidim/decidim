<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
<li class="ml-2">
  <a href="<%= url %>"
    class="flex items-center gap-2 border border-secondary rounded font-semibold px-4 py-1.5 hover:bg-secondary hover:text-white"
    title="<%= t("views.pagination.next_title") %>"
    rel="next">
    <span class="hidden md:block"><%= t("views.pagination.next").html_safe %></span>
    <%= icon "arrow-right-line", class: "fill-current" %>
  </a>
</li>
