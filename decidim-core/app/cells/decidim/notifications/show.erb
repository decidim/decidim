<%
validations = [];

validations << t("decidim.notifications.no_notifications") if !notifications.any?

validations.each do |validation| %>
  <p><%= validation %></p>
<% end %>

<div class="p-12">
  <div class="divide-y divide-border-3 -my-4">
    <% notifications.select(&:resource).each do |notification| %>
      <div class="py-4">
        <%= cell("decidim/notification", notification) %>
      </div>
      <% end %>
  </div>

  <%= decidim_paginate notifications %>
</div>
