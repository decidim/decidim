<div class="flex items-start justify-between gap-12">
  <time class="text-gray-2 whitespace-nowrap flex-none" title="<%= l(notification.created_at) %>"> <%= notification.created_at_in_words %></time>
  <div class="flex flex-col grow space-y-1">
    <span class="text-md prose-a:font-semibold prose-a:no-underline prose-a:text-secondary"><%= notification_title %></span>
    <span class="text-sm text-gray-2 flex items-center gap-1">
      <%# TODO: get the right icon and text %>
      <%= icon notification.resource, class: "fill-current" %>
      Pressupostos Participatius 2020-21
    </span>
  </div>
  <%= link_to model, remote: true, method: :delete, class: "bg-background-3 rounded flex items-center gap-1 py-1 px-2 text-xs text-secondary transition hover:bg-secondary hover:text-white" do %>
    <%= t("mark_as_read", scope: "layouts.decidim.notifications_dashboard") %>
    <%= icon "check-line", class: "fill-current" %>
  <% end %>
</div>
