<div class="notification">
  <div class="notification__time" title="<%= l(notification.created_at) %>"> <%= notification.created_at_in_words %></div>
  <div class="notification__snippet">
    <span class="notification__snippet-title"><%= notification_title %></span>
    <span class="notification__snippet-resource">
      <%# REDESIGN_PENDING: get the right text %>
      <%= icon notification.resource %>
      Pressupostos Participatius 2020-21
    </span>
  </div>
  <%= link_to model, remote: true, method: :delete, class: "notification__button" do %>
    <%= t("mark_as_read", scope: "layouts.decidim.notifications_dashboard") %>
    <%= icon "check-line", class: "fill-current" %>
  <% end %>
</div>
