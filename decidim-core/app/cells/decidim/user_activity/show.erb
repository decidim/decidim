  <div class="grid md:grid-cols-8 items-start gap-4 md:gap-12">
    <div class="md:col-span-2 flex flex-wrap flex-row md:flex-col justify-center md:justify-start gap-4 sticky top-0 md:top-2 bg-white">
      <% filter_items.each do |item| %>
        <%= link_to(
              url_for(params.to_unsafe_h.except("filter").merge(item.to_h.slice(:filter))),
              {
                class: "flex gap-2 p-1.5 group rounded hover:bg-background-4#{" bg-background-4 [&_svg]:text-secondary [&_span]:text-secondary [&_span]:font-semibold" if current_resource_type == item[:name]}",
                title: item[:translation]
              }
            ) do %>
          <%= resource_type_icon item[:name], class: "w-6 h-6 md:w-4 md:h-4 flex-none text-gray group-hover:text-secondary fill-current" %>
          <span class="hidden md:block text-sm text-gray-2 first-letter:uppercase group-hover:text-secondary group-hover:font-semibold"><%= item[:translation] %></span>
        <% end %>
      <% end %>
    </div>

    <div class="md:col-span-6 divide-y divide-gray-3 -mt-4">
      <% if activities.length == 0 %>
        <p><%= t "decidim.user_activity.index.no_activities_warning" %></p>
      <% else %>
        <%= cell "decidim/activities", activities %>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col-reverse md:flex-row items-center justify-between gap-1 py-8 md:py-16">
    <%= render partial: "decidim/shared/results_per_page.html" %>

    <%= decidim_paginate activities %>
  </div>
