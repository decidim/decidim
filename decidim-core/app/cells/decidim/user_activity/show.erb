<h1 class="section-heading"><%= t("decidim.user_activity.index.title") %></h1>

<div class="columns mediumlarge-4 large-3">
  <div class="card card--secondary show-for-mediumlarge">
    <%# = filter_form_for filter, last_activities_path do |form| %>
      <%# = form.collection_radio_buttons :resource_type, resource_types, :first, :last, legend_title: t(".resource_type") %>
    <%# end %>
  </div>
</div>

<div id="activities" class="columns small-12">
  <% if activities.length == 0 %>
    <div class="callout warning">
      <%= t "decidim.user_activity.index.no_activities_warning" %>
    </div>
  <% else %>
    <%= render partial: "decidim/shared/results_per_page", formats: [:html] %>

    <div class="row">
      <%= cell "decidim/activities", activities %>
    </div>

    <%= decidim_paginate activities %>
  <% end %>
</div>