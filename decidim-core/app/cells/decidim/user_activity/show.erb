  <div class="grid md:grid-cols-8 items-start gap-4 md:gap-12">
    <div class="md:col-span-2 flex flex-wrap flex-row md:flex-col justify-center md:justify-start gap-4 sticky top-0 md:top-2 bg-white">
      <%= filter_form_for context[:filter] do |form| %>
        <div class="columns mediumlarge-6 large-5">
          <%= form.collection_radio_buttons(
                :resource_type,
                filter_items_for_radiobuttons,
                :name,
                :text
              ) do |builder|
                  builder.label(class: "flex gap-2 p-1.5 group rounded hover:bg-background-4") { builder.radio_button + builder.text }
                end %>
        </div>
      <% end %>
    </div>

    <div class="md:col-span-6 divide-y divide-gray-3 -mt-4" id="activities-container">
      <% if activities.length == 0 %>
        <p><%= t "decidim.user_activity.index.no_activities_warning" %></p>
      <% else %>
        <%= cell "decidim/activities", activities %>
      <% end %>
    </div>
  </div>

  <% unless activities.length == 0 %>
    <div class="flex flex-col-reverse md:flex-row items-center justify-between gap-1 py-8 md:py-16" id="decidim-paginate-container">

      <%= decidim_paginate activities %>
    </div>
  <% end %>
