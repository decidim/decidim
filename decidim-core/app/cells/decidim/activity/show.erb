<article class="card">
  <div class="card__content">
    <div class="card__text">
      <div class="text-medium">
        <% if title.present? %>
          <%= title %>
        <% end %>
      </div>
    </div>
    <div class="card__author inline-block">
      <%= author_data = author %>
    </div><div class="card__activity-date inline-block <%= "before-content" if author_data.present? %>">
      <span class="text-medium mt-xs"><%= created_at %></span>
    </div>
    <div class="card__header mb-none">
      <%= link_to resource_link_path, class: "card__link" do %>
        <h5 class="card__title mb-none">
          <%= html_truncate resource_link_text, length: 80 %>
        </h5>
      <% end %>
      <%= description %>
    </div>
  </div>
</article>
