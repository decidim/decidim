<div class="profile__activity__item" id="<%= element_id %>" data-activity>
  <div class="profile__activity__item-time">
    <%= created_at %>
  </div>
  <div class="profile__activity__item-content">
    <span>
      <%= title if title.present? %>
      <a href="<%= resource_link_path %>">
        <%= html_truncate decidim_sanitize(resource_link_text, strip_tags: true), length: 80 %>
      </a>
    </span>
    <span>
      <%= icon "treasure-map-line" %>
      <%= participatory_space_link %>
    </span>
  </div>
</div>
