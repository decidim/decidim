<div class="flex flex-col md:flex-row gap-2 md:gap-12 py-4" id="<%= element_id %>" data-activity>
  <div class="flex-none text-gray-2">
    <%= created_at %>
  </div>
  <div class="space-y-2">
    <span>
      <%= title if title.present? %>
      <a href="<%= resource_link_path %>" class="text-secondary font-semibold">
        <%= html_truncate decidim_sanitize(resource_link_text, strip_tags: true), length: 80 %>
      </a>
    </span>
    <span class="flex items-center gap-1 text-gray-2 text-sm"><%= icon "treasure-map-line", class: "w-3.5 h-3.5 text-gray fill-current" %> <%= participatory_space_link %></span>
  </div>
</div>
