<% if has_link_to_resource? && link_whole_card? %>
  <%= link_to resource_path, class: "card__list #{extra_class}", id: resource_id do %>
    <%= render :content %>
  <% end %>
<% else %>
  <%= content_tag :div, class: "card__list #{extra_class}", id: resource_id do %>
    <%= render :content %>
  <% end %>
<% end %>
