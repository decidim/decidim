<% if has_link_to_resource? && link_whole_card? %>
  <%= link_to resource_path, class: item_list_class, id: resource_id, **html_options do %>
    <%= render :content %>
  <% end %>
<% else %>
  <%= content_tag :div, class: item_list_class, id: resource_id do %>
    <%= render :content %>
  <% end %>
<% end %>
