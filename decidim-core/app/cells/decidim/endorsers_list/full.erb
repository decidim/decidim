<div id="endorsers_list" class="blog__endorsers" data-toggler=".block" hidden>
  <div class="blog__endorsers-text"><%= t("decidim.endorsers_list.endorsed_by") %></div>
  <div class="blog__endorsers-grid">
    <% full_endorsers.each do |endorser| %>
      <span class="rounded-full overflow-hidden border border-white inline-block w-6 h-6">
        <%= cell "decidim/author", endorser, layout: :avatar %>
      </span>
    <% end %>
  </div>
  <button class="blog__endorsers-button" data-toggle="endorsers_list-trigger endorsers_list"><%= t("decidim.endorsers_list.close") %></button>
</div>
