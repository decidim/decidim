<%= link_to resource_path, class: "group flex items-center space-x-1.5" do %>
  <div class="w-12 h-12 relative flex-none">
    <div class="w-full h-full rounded-full overflow-hidden drop-shadow-md border-2 border-white group-hover:border-tertiary">
      <%= image_tag avatar, alt: t("decidim.author.avatar", name: decidim_sanitize(name)), class: "w-full h-full object-cover" %>
    </div>
    <%= render :star_badge if star_badge? %>
  </div>
  <div class="space-y-1">
    <h5 class="h5 text-secondary group-hover:underline">
      <%= name %>
      <%= render :role_badge if role.present? %>
    </h5>
    <span class="text-gray-2 lowercase"><%= nickname %></span>
  </div>
<% end %>
