<div data-add-message>
  <%= reply_form do |f| %>
    <div class="conversation__reply">
      <% recipients.each do |recipient| %>
        <%= f.hidden_field :recipient_id, id: nil, name: "conversation[recipient_id][]", value: recipient.id %>
      <% end %>
      <%= f.label :body, nil, class: "sr-only" %>
      <%= f.text_area :body, label: false, rows: 4, required: true, placeholder: t("placeholder", scope: "decidim.messaging.conversations.start"), data: { "input-emoji": true } %>
      <%= f.submit "#{t("send", scope: "decidim.messaging.conversations.start")} #{icon "arrow-right-line", class: "fill-current"}".html_safe, class: "button button__sm button__secondary self-end mt-4" %>
    </div>
  <% end %>
</div>
