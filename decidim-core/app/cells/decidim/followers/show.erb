<%
validations = []

validations << t("decidim.followers.no_followers") if !followers.any?

validations.each do |validation| %>
  <p><%= validation %></p>
<% end %>

<% if validations.empty? %>
  <div class="grid grid-cols-2 gap-10">
    <% followers.each do |follower| %>
      <%= card_for follower %>
    <% end %>
  </div>

  <%= decidim_paginate followers %>
<% end %>
