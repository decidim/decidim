<% add_decidim_page_title(title) %>

<main data-dialog-container class="text-center mt-8">
  <div class="flex justify-center">
    <%= icon "lock-line", class: "w-20 h-20" %>
  </div>
  <h1 tabindex="-1" class="h1" data-dialog-title><%= title %></h1>
  <div>
    <div class="authorization-modal__verification-container">
      <% verifications.each do |verification| %>
        <div class="authorization-modal__verification">
          <% verification[:messages].each do |msg| %>
            <p><%= msg %></p>
          <% end %>

          <% if verification[:fields].present? %>
            <ul>
              <% verification[:fields].each do |field| %>
                <li><%= field %></li>
              <% end %>
            </ul>
          <% end %>

          <%= content_tag verification[:cta][:type], class: "button button__lg button__secondary", href: verification[:cta][:url], data: verification[:cta][:data] do %>
            <span><%= verification[:cta][:text] %></span>
            <%= icon "arrow-right-line" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>
