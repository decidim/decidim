<div class="<%= author_classes %>">
  <div class="author-data__main">
    <%= render :profile %>
  </div>

  <% if actionable? %>
    <div class="author-data__extra">
      <%= render :date %>

      <%= render :comments %>

      <%= render :flag %>

      <%= render :contact %>

      <%= render :withdraw %>
    </div>
  <% end %>
</div>
