<% if withdrawable? %>
  <% if from_context.is_a?(Decidim::Meetings::Meeting) %>
    <%= action_authorized_link_to :withdraw, withdraw_path, method: :put, class: "title-action__action button small hollow", title: t("withdraw_btn_hint", scope: "decidim.meetings.meetings.show" ), data: { confirm: t("withdraw_confirmation_html", scope: "decidim.meetings.meetings.show" ) } do %>
      <%= t("withdraw_meeting" , scope: "decidim.meetings.meetings.show") %>
      <%= icon "x", role: "img", "aria-hidden": true %>
    <% end %>
  <% else %>
    <%= action_authorized_link_to :withdraw, withdraw_path, method: :put, class: "title-action__action button small hollow", title: t("withdraw_btn_hint", scope: "decidim.proposals.proposals.show"), data: { confirm: t("withdraw_confirmation_html", scope: "decidim.proposals.proposals.show") } do %>
      <%= t( "withdraw_proposal", scope: "decidim.proposals.proposals.show") %>
      <%= icon "x", role: "img", "aria-hidden": true %>
    <% end %>
  <% end %>
<% end %>
