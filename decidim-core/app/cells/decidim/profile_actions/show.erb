<div class="max-w-full flex md:flex-col gap-4 overflow-x-auto">
  <% profile_actions.each do |item| %>
    <% if item[:cell].present? %>
      <%= cell item[:cell], profile_holder, item[:options] %>
    <% else %>
      <%= cell "decidim/button", item, item[:options] %>
    <% end %>
  <% end %>
</div>

<%# REDESING_PENDING: hide this container if both conditions do not contain anything %>
<div class="flex justify-center md:justify-between text-xs">
  <% if user_flaggable? %>
    <%== cell("decidim/author", profile_holder, from: profile_holder).flag_user %>
  <% end %>

  <% if can_leave_group? %>
    <%= cell(
      "decidim/button",
      { icon: "logout-box-r-line", text: t("decidim.profiles.user.leave_user_group"), path: decidim.leave_group_path(profile_holder.nickname) },
      method: :delete,
      button_classes: "button button__sm button__text-secondary only:m-auto",
      text_classes: "first-letter:uppercase"
    ) %>
  <% end %>
</div>
