<%= content_tag :div, id: options[:id], class: "flash flex-col #{css_class}", style: css_styles, data: { announcement: "" }.compact, hidden: options[:hidden] do %>
  <% if has_title? %>
    <div class="flash__title">
      <%= clean_title %>
    </div>
  <% end %>

  <div class="flash__message">
    <%= text %>
  </div>
<% end %>
