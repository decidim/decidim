<%= content_tag :div, id: options[:id], class: "flash flex-col #{css_class}", data: { announcement: "" }.compact, hidden: options[:hidden] do %>
  <% if has_title? %>
    <div class="flash__title">
      <%= clean_title %>
    </div>
  <% end %>

  <span class="flash__message">
    <%= text %>
  </span>
<% end %>
