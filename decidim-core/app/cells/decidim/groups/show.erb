<%
validations = []

validations << t("decidim.groups.no_user_groups") if !user_groups.any?

validations.each do |validation| %>
  <p><%= validation %></p>
<% end %>

<% if validations.empty? %>
  <div class="grid md:grid-cols-2 gap-5 md:gap-10">
    <% user_groups.each do |user_group| %>
      <%= card_for user_group %>
    <% end %>
  </div>
  <%= decidim_paginate user_groups %>
<% end %>
