<div id="cc-dialog-wrapper" class="flex-center hide" role="region">
  <div class="cc-dialog padding-vertical-1">
    <div class="row expanded">
      <div class="columns medium-12 large-8">
        <div class="cc-content">
          <div class="h5">
            <%= t("layouts.decidim.cookie_consent.dialog.title") %>
          </div>
          <div>
            <%= t("layouts.decidim.cookie_consent.dialog.description") %>
          </div>
        </div>
      </div>
      <div class="columns medium-12 large-4">
        <div class="cc-button-wrapper flex-center">
          <button id="cc-dialog-accept" class="button margin-right-1 margin-bottom-0">
            <%= t("layouts.decidim.cookie_consent.dialog.accept_all") %>
          </button>
          <button id="cc-dialog-reject" class="button hollow margin-right-1 margin-bottom-0">
            <%= t("layouts.decidim.cookie_consent.dialog.essential_only") %>
          </button>
          <button id="cc-dialog-settings" class="button clear margin-right-1 margin-bottom-0" data-open="cc-modal">
            <%= t("layouts.decidim.cookie_consent.dialog.cookie_settings") %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
