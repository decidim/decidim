<div class="card extra">
  <div class="definition-data__item">
    <span class="definition-data__title">
      <%= t("amended_by", scope: "decidim.amendments.amendable") %>
    </span>
  </div>
  <% model.each do |amender| %>
    <div class="definition-data__item expanded" id="amendment_<%= amender.id %>">
      <%= cell "decidim/author", amender, options: { extra_classes: ["author-data--small"] }, has_actions: false %>
    </div>
  <% end %>
</div>
