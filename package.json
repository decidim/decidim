{
  "name": "decidim",
  "repository": {
    "url": "git@github.com:AjuntamentdeBarcelona/decidim.git",
    "type": "git"
  },
  "author": "Marc Riera <mrc2407@gmail.com>",
  "license": "AGPLv3",
  "scripts": {
    "build": "webpack --env.dev",
    "build:prod": "NODE_ENV=production webpack -p --env.prod",
    "start": "webpack --env.dev --watch --progress --color --display-error-details",
    "lint": "eslint -c .eslintrc.json --ext .js,.js.es6,.jsx .",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:ci": "yarn run lint && yarn test",
    "graphql:download_schema": "apollo-codegen download-schema http://localhost:3000/api --output schema.json",
    "pregraphql:generate_schema_types": "yarn run graphql:download_schema",
    "graphql:generate_schema_types": "apollo-codegen generate decidim-comments/**/*.graphql --schema schema.json --target typescript --output decidim-comments/app/frontend/support/schema.ts",
    "postgraphql:generate_schema_types": "rm schema.json"
  },
  "devDependencies": {
    "@types/classnames": "^0.0.32",
    "@types/core-js": "^0.9.35",
    "@types/faker": "^3.1.32",
    "@types/jest": "^18.1.1",
    "@types/react": "^15.0.12",
    "@types/react-dom": "^0.14.23",
    "@types/uuid": "^2.0.29",
    "awesome-typescript-loader": "^3.0.4",
    "babel-core": "~6.23.1",
    "babel-eslint": "~7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "~6.3.0",
    "babel-plugin-__coverage__": "~11.0.0",
    "babel-plugin-transform-decorators-legacy": "~1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-preset-airbnb": "~2.2.3",
    "babel-preset-es2015": "~6.22.0",
    "babel-preset-react": "~6.22.0",
    "babel-preset-stage-2": "~6.22.0",
    "enzyme": "^2.7.1",
    "eslint": "~3.15.0",
    "eslint-loader": "~1.6.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~4.0.0",
    "eslint-plugin-react": "~6.10.0",
    "expose-loader": "~0.7.1",
    "faker": "~3.1.0",
    "jest": "^19.0.2",
    "jest-transform-graphql": "^1.0.0",
    "json-loader": "~0.5.4",
    "karma-webpack": "~2.0.2",
    "progress-bar-webpack-plugin": "~1.9.0",
    "raw-loader": "~0.5.1",
    "react-addons-test-utils": "~15.4.0",
    "source-map-loader": "^0.1.6",
    "ts-jest": "^19.0.0",
    "typescript": "2.1.x",
    "typescript-babel-jest": "^1.0.1",
    "webpack": "~2.2.1",
    "webpack-bundle-analyzer": "~2.3.0",
    "webpack-config-utils": "~2.3.0",
    "webpack-validator": "~2.3.0",
    "yaml-loader": "~0.4.0"
  },
  "dependencies": {
    "apollo-client": "^1.0.0-rc.2",
    "@types/enzyme": "^2.7.5",
    "apollo-codegen": "^0.10.8",
    "@types/classnames": "^0.0.32",
    "@types/core-js": "^0.9.35",
    "@types/react": "^15.0.10",
    "@types/react-dom": "^0.14.23",
    "classnames": "~2.2.5",
    "graphql-anywhere": "~2.2.0",
    "graphql-tag": "^1.3.1",
    "jquery": "~3.1.1",
    "moment": "~2.17.1",
    "react": "~15.4.2",
    "react-addons-update": "~15.4.2",
    "react-apollo": "^1.0.0-rc.2",
    "react-dom": "~15.4.2",
    "react-i18nify": "~1.8.4",
    "uuid": "~3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "graphql"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "typescript-babel-jest",
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$"
  }
}
