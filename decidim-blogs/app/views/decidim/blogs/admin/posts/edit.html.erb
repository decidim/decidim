<% add_decidim_page_title(translated_attribute(post.title)) %>
<%= decidim_form_for(@form, html: { class: "form edit_post" }) do |f| %>
  <%= render partial: "form", object: f, locals: { title: t(".title") } %>

  <div class="button--double form-general-submit">
    <%= f.submit t(".save") %>
  </div>
<% end %>
