<% add_decidim_page_title(t(".title")) %>
<div class="card">
  <%= cell("decidim/announcement", t("decidim.admin.manage_trash.deleted_items_warning"), callout_class: "warning") %>
  <div class="item_show__header">
    <h1 class="item_show__header-title">
      <%= t(".title") %>
    </h1>
  </div>
  <div class="table-scroll">
    <table class="table-list">
      <thead>
      <tr>
        <th><%= t("models.post.fields.title", scope: "decidim.blogs") %></th>
        <th><%= t("models.post.fields.body", scope: "decidim.blogs") %></th>
        <th><%= t("models.post.fields.author", scope: "decidim.blogs") %></th>
        <th><%= t("models.post.fields.published_at", scope: "decidim.blogs") %></th>
        <th><%= t("actions.title", scope: "decidim.blogs") %></th>
      </tr>
      </thead>
      <tbody>
      <% deleted_posts.created_at_desc.each do |post| %>
        <%= render partial: "decidim/blogs/admin/posts/post-tr", locals: { post:, view: :deleted } %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= decidim_paginate deleted_posts %>
