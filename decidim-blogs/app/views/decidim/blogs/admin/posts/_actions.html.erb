<button type="button" data-component="dropdown" data-target="actions-post-<%= post.id %>" aria-label="<%= t('decidim.admin.actions.actions_label', resource: post.title) %>">
  <%= icon "more-fill", class: "text-secondary" %>
</button>

<div class="inline-block relative">
  <ul id="actions-post-<%= post.id %>" class="dropdown dropdown__action" aria-hidden="true">
    <% if view == :deleted %>
      <% if allowed_to? :restore, :blogpost, trashable_deleted_resource: post %>
        <li class="dropdown__item">
          <%= link_to url_for(action: :restore, id: post, controller: "posts"), method: :patch, class: "dropdown__button action-icon--restore" do %>
            <%= icon "refresh-line" %>
            <%= t("decidim.admin.actions.restore") %>
          <% end %>
        </li>
      <% end %>
    <% else %>
      <% if allowed_to? :update, :blogpost, blogpost: post %>
        <li class="dropdown__item">
          <%= link_to edit_post_path(post), class: "dropdown__button action-icon--edit" do %>
            <%= icon "pencil-line" %>
            <%= t("actions.edit", scope: "decidim.blogs") %>
          <% end %>
        </li>

        <hr>

        <% if component_settings.attachments_allowed? %>
          <li class="dropdown__item">
            <%= link_to post_attachment_collections_path(post), class: "dropdown__button action-icon--attachment_collections" do %>
              <%= icon "folder-line" %>
              <%= t("actions.attachment_collections", scope: "decidim.meetings") %>
            <% end %>
          </li>

          <li class="dropdown__item">
            <%= link_to post_attachments_path(post), class: "dropdown__button action-icon--attachments" do %>
              <%= icon "attachment-line" %>
              <%= t("actions.attachments", scope: "decidim.meetings") %>
            <% end %>
          </li>

          <hr>
        <% end %>
      <% end %>

      <li class="dropdown__item">
        <%= link_to resource_locator(post).path, target: :blank, data: { "external-link": false }, class: "dropdown__button action-icon--preview" do %>
          <%= icon "eye-line" %>
          <%= t("actions.preview", scope: "decidim.admin") %>
        <% end %>
      </li>

      <hr>

      <li class="dropdown__item">
        <%= dropdown_resource_permissions_link(post) %>
      </li>

      <% if allowed_to? :soft_delete, :blogpost, trashable_deleted_resource: post %>
        <hr>

        <li class="dropdown__item">
          <%= link_to soft_delete_post_path(post), method: :patch, data: { confirm: t("actions.confirm_delete_post", scope: "decidim.blogs") }, class: "dropdown__button action-icon--delete" do %>
            <%= icon "delete-bin-line" %>
            <%= t("actions.soft_delete", scope: "decidim.admin") %>
          <% end %>
        </li>
      <% else %>
        <hr>

        <li class="dropdown__item">
          <span class="dropdown__button action-icon--disabled" role="img" aria-label="<%= t("actions.soft_delete", scope: "decidim.admin") %>">
            <%= icon "delete-bin-line" %>
            <%= t("actions.soft_delete", scope: "decidim.admin") %>
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
