<div class="blog__actions">
  <div class="blog__actions-left">
    <% if endorsements_enabled? %>
      <div id="endorsers_list-trigger" class="cursor-pointer" data-toggler=".is-active" data-toggle="endorsers_list-trigger endorsers_list" role="button">
        <%= cell "decidim/endorsers_list", post %>
      </div>
      <%= endorsement_buttons_cell(post) %>
    <% end %>

    <%= link_to "#comments", class: "button button__sm button__transparent-secondary" do %>
      <%= t("decidim.blogs.posts.show.comments") %>
      <%= icon "chat-1-line", class: "fill-current flex-none" %>
    <% end %>
  </div>

  <div class="blog__actions-right">
    <%= follow_button_for(post, false, button_classes: "button button__sm button__text-secondary", text_classes: "") %>

    <%# REDESIGN_PENDING: implement the share button %>
    <button class="button button__sm button__text-secondary">
      Compartir
      <%= icon "share-line", class: "fill-current flex-none" %>
    </button>

    <%# REDESIGN_PENDING: implement the flag button %>
    <button class="button button__sm button__text-secondary">
      Denunciar
      <%= icon "flag-line", class: "fill-current flex-none" %>
    </button>
  </div>
</div>

<%# REDESIGN_PENDING: Do a cell if needed %>
<div id="endorsers_list" class="blog__endorsers" data-toggler=".block" hidden>
  <div class="blog__endorsers-text">Li agrada a...</div>
  <div class="blog__endorsers-grid">
    <% post.endorsements.map { |identity| present(identity.normalized_author) }.each do |endorser| %>
      <%# REDESIGN_PENDING: Use cell/author %>
      <span class="rounded-full overflow-hidden border border-white inline-block w-6 h-6">
        <%= image_tag(
              endorser.avatar_url(:thumb),
              alt: t("decidim.author.avatar", name: decidim_sanitize(endorser.name)),
              class: "w-full h-full object-cover"
            ) %>
      </span>
    <% end %>
  </div>
  <div class="blog__endorsers-button" data-toggle="endorsers_list-trigger endorsers_list" role="button">Tancar</div>
</div>
