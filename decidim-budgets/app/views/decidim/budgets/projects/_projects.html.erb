<div class="row small-up-1 medium-up-2 card-grid">
  <% projects.each do |project| %>
    <div class="column">
      <article class="card card--project">
        <div class="card__content">
          <%= link_to project, class: "card__link" do %>
            <h5 class="card__title"><%= translated_attribute project.title %></h5>
          <% end %>
          <%== translated_attribute project.short_description %>
          <%= render partial: "tags", locals: { project: project } %>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= decidim_paginate projects, order_start_time: params[:order_start_time], scope_id: params[:scope_id] %>
