<%= filter_form_for filter do |form| %>
  <div class="filters__section">
    <div class="filters__search">
      <div class="input-group">
        <%= form.search_field :search_text, label: false, class: "input-group-field", placeholder: t('.search') %>
        <div class="input-group-button">
          <button type="submit" class="button button--muted">
            <%= icon "magnifying-glass", aria_label: t('.search') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if current_participatory_space.has_subscopes? %>
    <%= form.scopes_picker :scope_id, multiple: true, legend_title: t(".scopes"), label: false do |scope|
          { url: decidim.scopes_picker_path(root: current_participatory_space.scope, current: scope&.id, title: t('.scope_prompt'), global_id: "global"),
            text: scope ? scope_name_with_type(scope) : t('.scope_prompt') }
        end %>
  <% end %>

  <% if current_feature.categories.any? %>
    <%= form.categories_select :category_id, current_feature.categories, legend_title: t('.category'), disable_parents: false, label: false, prompt: t('.category_prompt')  %>
  <% end %>

  <%= form.hidden_field :random_seed %>
<% end %>
