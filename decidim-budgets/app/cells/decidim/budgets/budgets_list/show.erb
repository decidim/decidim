<% if voted? || progress? %>
  <h2 class="h5 md:h3 decorator">
    <%= t("voted_budgets", scope: "decidim.budgets.budgets_list") %>
  </h2>

  <%= render :voted %>
  <%= render :progress %>
<% end %>

<% if non_voted_budgets.any? %>
  <div id="budgets" class="card__list-list !space-y-5 w-full">
    <%= main_list %>
  </div>
<% end %>

<%= decidim_paginate budget_paginate %>
