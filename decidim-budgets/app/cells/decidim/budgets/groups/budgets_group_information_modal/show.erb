<button class="link" data-open="budget-modal-info" aria-controls="budget-modal-info" aria-haspopup="true" tabindex="0"><%= t("budgets_group_information_modal.more_information", scope: "decidim.budgets.groups") %></button>
<div class="reveal" data-reveal <%= "data-reveal-open" if discardable.any? %> id="budget-modal-info">
  <div class="reveal__header">
    <h3 class="reveal__title"><%= decidim_sanitize(title) %></h3>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>
  <p><%= decidim_sanitize(description) %></p>

  <% if discardable.any? %>
    <div class="callout alert">
      <%= t("budgets_group_information_modal.limit_reached", scope: "decidim.budgets.groups") %>
      <ul>
      <% discardable.each do |budget| %>
        <li><%= link_to(t("budgets_group_information_modal.limit_reached_cancel", scope: "decidim.budgets.groups", name: translated_attribute(budget.name)), order_path_for(budget), method: :delete, class: "cancel-order", data: { confirm: t("projects.budget_summary.are_you_sure", scope: "decidim.budgets") }) %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= content_tag(:p, more_information) if more_information %>
  <p>
    <%= link_to t("budgets_group_information_modal.back_to", scope: "decidim.budgets.groups", group_name: group_name), main_component_path(group_component) %>
  </p>
  <div class="row">
    <div class="columns medium-8 medium-offset-2">
      <button class="button expanded" data-close><%= t("budgets_group_information_modal.continue", scope: "decidim.budgets.groups") %></button>
    </div>
  </div>
</div>
