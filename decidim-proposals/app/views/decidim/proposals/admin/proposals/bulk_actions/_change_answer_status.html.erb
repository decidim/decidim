<div id="js-change-answer-status-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_multiple_answers_proposals_path, method: :post, id: "js-form-change-answer-status", class: "form form-defaults flex items-center gap-x-2") do %>
    <div class="hide">
      <% proposals.each do |proposal| %>
        <%= check_box_tag "proposal_ids[]", proposal.id, false, class: "js-check-all-proposal js-proposal-id-#{proposal.id}" %>
      <% end %>
    </div>
    <%= hidden_field_tag :template_id %>

    <%= bulk_templates_select(current_component, t("change_answer_status", scope: "decidim.proposals.admin.proposals.index"), id: "template_id_select") %>

    <%= submit_tag(t("decidim.proposals.admin.proposals.index.update"), id: "js-submit-change-answer-status", class: "button button__sm button__secondary small button--simple float-left") %>

    <button id="js-cancel-change-answer-status" class="button button__sm button__secondary button__sm button__secondary js-cancel-bulk-action" type="button"><%= t("decidim.proposals.admin.proposals.index.cancel") %></button>
  <% end %>
</div>
