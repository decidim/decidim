<% add_decidim_page_title(t(".title")) %>
<div class="card">
  <div class="item_show__header item_show__header--with-action-options">
    <h1 class="item_show__header-title"><%= t(".title") %></h1>
  </div>
  <%= admin_filter_selector(filter_prefix_key) %>
    <div class="table-scroll mt-8">
      <table class="table-list">
        <%= render partial: "proposals-thead" %>
        <tbody>
        <% if trashable_deleted_collection.present? %>
          <% trashable_deleted_collection.each do |proposal| %>
            <%= render partial: "proposal-tr", locals: { proposal:, view: :deleted } %>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
</div>
