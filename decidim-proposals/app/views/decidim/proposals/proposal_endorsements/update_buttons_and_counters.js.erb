var $proposalEndorsementsCount = $('#proposal-<%= proposal.id %>-endorsements-count');
morphdom($proposalEndorsementsCount[0], '<%= j(render partial: 'decidim/proposals/proposals/endorsements_count', locals: { proposal: proposal, from_proposals_list: @from_proposals_list }).strip.html_safe %>');
var $proposalEndorsementButton = $('#proposal-<%= proposal.id %>-endorsement-button');
morphdom($proposalEndorsementButton[0], '<%= j(render partial: 'decidim/proposals/proposals/endorsement_button', locals: { proposal: proposal, from_proposals_list: @from_proposals_list, btn_label: current_user.name }).strip.html_safe %>');
<% current_user.user_groups.verified.each do |g| %>
var $proposalEndorsementButton4Group = $('#proposal-<%= proposal.id %>-endorsement-button-<%= g.id %>');
morphdom($proposalEndorsementButton4Group[0], '<%= j(render partial: 'decidim/proposals/proposals/endorsement_button', locals: { proposal: proposal, from_proposals_list: @from_proposals_list, btn_label: g.name, user_group: g }).strip.html_safe %>');
<% end %>