<div class="collection-sort-controls row small-up-1 medium-up-3 card-grid">
  <div class="column">
    <%= order_selector available_orders, i18n_scope: "decidim.proposals.proposals.orders" %>
  </div>

  <div class="column">
    <%= render partial: "decidim/shared/results_per_page" %>
  </div>

  <div class="column">
    <%= render partial: "display_type" %>
  </div>
</div>

  <% if current_feature.settings.split_proposal_enabled? && feature_settings.official_proposals_enabled %>
    <%= render "splitted_proposals" %>
  <% else %>
    <div class="<%= 'row small-up-1 medium-up-2 card-grid' unless @param_list %>">
      <%= render @proposals %>
    </div>
  <% end%>
</div>
<%= decidim_paginate @proposals, random_seed: random_seed %>
