<div class="row columns">
  <%= link_to :back, class: "muted-link" do %>
    <%= icon "chevron-left", class: "icon--small" %>
    <%= t(".back") %>
  <% end %>
  <h2 class="section-heading"><%= t(".title") %></h2>
</div>
<div class="row">
  <div class="columns large-6 medium-centered">
    <div class="card">
      <div class="card__content">
        <%= form_for(@form, class: "register-form") do |form| %>
          <div class="field">
            <%= form.text_field :title %>
          </div>
          <div class="field">
            <%= form.text_area :body, rows: 10 %>
          </div>
          <% if categories&.any? %>
            <div class="field">
              <%= form.select :category_id, options_for_select([["Select something"]] + categories, selected: @form.category_id, disabled: disabled_categories) %>
            </div>
          <% end %>
          <% if scopes&.any? %>
            <div class="field">
              <%= form.collection_select :scope, scopes, :id, :name, include_blank: true %>
            </div>
          <% end %>
          <div class="actions">
            <%= form.submit t(".send"), class: "button expanded" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
