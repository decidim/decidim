<div class="row">
  <%= render partial: "wizard_aside" %>

  <div class="columns large-6">
    <%= render partial: "wizard_header", locals: {callout_help_text_class: "warning"} %>

    <div class="card">

      <div class="card__content">
        <%= render partial: "proposal", locals: {proposal: @proposal}%>

        <%= link_to t(".modify"), edit_draft_proposal_path(@proposal) %>

        <%= button_to t(".publish"), publish_proposal_path(@proposal), method: :post, class: "button expanded" %>
      </div>
    </div>
  </div>
  <div class="columns large-3"></div>
</div>
