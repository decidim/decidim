<div class="card__footer">
  <div class="card__support">
    <% if actionable? %>
      <%= render partial: "decidim/proposals/proposals/votes_count.html", locals: { proposal: model, from_proposals_list: true } %>
      <%= render partial: "decidim/proposals/proposals/vote_button.html", locals: { proposal: model, from_proposals_list: true } %>
    <% else %>
      <div class="card__support__data"></div>
      <%= link_to t("decidim.proposals.proposals.proposal.view_proposal"), resource_path, class: "card__button button small secondary" %>
    <% end %>
  </div>
</div>
