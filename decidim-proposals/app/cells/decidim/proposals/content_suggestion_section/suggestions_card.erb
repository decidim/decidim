<% if suggested_content_enabled? %>
  <% proposals = suggested_proposals %>
  <h2 class="h5 flex items-center gap-2 mb-4 font-bold md:h4">
    <%= icon "compass-3-line", class: "w-6 h-6"%>
    <%= I18n.t("show.title", scope: "decidim.proposals.proposals") %>
  </h2>
  <div class="content-suggestions-list">
    <div class="card__list-list">
      <% proposals.each do |proposal| %>
        <%= cell "decidim/proposals/proposal_suggestion_card", proposal %>
      <% end %>
    </div>
  </div>
<% end %>
