<div class="column">
  <article class="card card--proposal <%= state_css %>">
    <div class="card__content">
      <div class="card__header">
        <%= link_to resource_path, class: "card__link" do %>
          <h5 class="card__title">
            <%= title %>
          </h5>
        <% end %>
        <div class="card__author">

        </div>
      </div>
      <div class="card__text">
        <div class="card__text--paragraph">
          <!-- TODO -->
          <p>
            <span class="card__text--status <%= state_css %>">
              <%= state %>
            </span>

            <%= body %>
          </p>
        </div>
        <%= cell("decidim/category", model.category, context: {resource: model}) %>
      </div>
    </div>
    <div class="card__status">
      <ul class="card-data">
        <li class="card-data__item">
          <%= published_at %>
        </li>
        <li class="card-data__item">
          <a href="">
            <%= icon "bell", class: "icon--small", aria_label: "Respaldos", role: "img" %>&nbsp;!Follow
          </a>
        </li>
        <li class="card-data__item">
          <a href="">
            <%= icon "bullhorn", class: "icon--small", aria_label: "Respaldos", role: "img" %>
            !<%= Faker::Number.between(0, 100) %>
          </a>
        </li>
        <li class="card-data__item">
          <a href="" title="Comentarios">
            <%= icon "comment-square", class: "icon--small", aria_label: "Comentarios", role: "img" %>
            !<%= Faker::Number.between(0, 100) %>
          </a>
        </li>
      </ul>
    </div>
    <div class="card__footer">
      <div class="card__support">
        <%#= partial "progress_bar", { progress: Faker::Number.between(0, 100), total: 100 } %>

        <button class="card__button button button--sc small">
          !Apoyar
        </button>

      </div>
    </div>
  </article>
</div>
