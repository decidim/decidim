<%= content_tag :h5,
                t("new.total_ballots", scope: "decidim.votings.polling_officer_zone.results"),
                class: "heading5" %>

<div class="card--secondary">
  <div class="card__content">
    <div class="row">
      <%= form.fields_for "[ballot_results]", form.object.ballot_results do |ballot_form| %>
        <%= content_tag :div,
                        ballot_form.number_field(
                          :valid_ballots_count,
                          label: t("new.total_valid_ballots", scope: "decidim.votings.polling_officer_zone.results")
                        ),
                        min: 0,
                        class: "columns medium-4" %>

        <%= content_tag :div,
                        ballot_form.number_field(
                          :blank_ballots_count,
                          label: t("new.total_blank_ballots", scope: "decidim.votings.polling_officer_zone.results")
                        ),
                        min: 0,
                        class: "columns medium-4" %>

        <%= content_tag :div,
                        ballot_form.number_field(
                          :null_ballots_count,
                          label: t("new.total_null_ballots", scope: "decidim.votings.polling_officer_zone.results")
                        ),
                        min: 0,
                        class: "columns medium-4" %>
      <% end %>
    </div>
  </div>
</div>
