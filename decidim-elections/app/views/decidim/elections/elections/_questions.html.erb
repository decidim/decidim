<h2 class="h4 flex gap-2 items-bottom mb-4">
  <%= icon "question-mark", class: "fill-tertiary" %>
  <span><%= t(".title") %></span>
</h2>
<div class="mb-4"><%= t(".subtitle") %></div>
<% questions.each do |question| %>
  <div class="card" data-component="accordion" id="accordion-title-<%= question.id %>">
    <div class="card-divider">
      <button class="card-divider-button" data-open="true" data-controls="panel-title-<%= question.id %>" type="button">
        <h2 class="h4" id="title"><%= translated_attribute question.body %></h2>
        <%= icon "arrow-down-s-line" %>
      </button>
    </div>

    <div id="panel-title-<%= question.id %>" class="card-section">
      <div class="row column">
        <p><%= decidim_sanitize translated_attribute(question.description) %></p>
        <ul>
          <% question.response_options.each do |answer| %>
            <li><%= translated_attribute answer.body %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
