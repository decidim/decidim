<h3 class="font-semibold mb-1" data-option-body>
  <%= translated_attribute(option.body) %>
</h3>
<div class="flex items-center justify-between gap-2 mb-2">
  <div class="percent-bar">
    <div class="percent-bar-width" style="width: <%= option.votes_percent %>%" data-option-votes-width="<%= question.id %>,<%= option.id %>"></div>
  </div>
  <div class="text-right text-sm leading-tight shrink-0 min-w-[64px]">
    <div data-option-votes-percent-text="<%= question.id %>,<%= option.id %>"><%= number_to_percentage(option.votes_percent, precision: 1) %></div>
    <div data-option-votes-count-text="<%= question.id %>,<%= option.id %>"><%= t("votes_count", scope: "decidim.elections.elections.show", count: option.votes_count) %></div>
  </div>
</div>
