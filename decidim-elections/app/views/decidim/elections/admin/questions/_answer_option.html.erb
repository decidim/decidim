<% answer_option = form.object %>

<div class="card questionnaire-question-response-option">
  <div class="card-divider">
    <h2 class="card-title">
      <span><%= t("response_option", scope: "decidim.forms.admin.questionnaires.response_option") %></span>
      <% if editable %>
        <button class="button button__xs button__transparent-secondary small alert remove-response-option button--title mb-2">
          <%= icon("delete-bin-line") %>
          <span class="hidden md:block"><%= t("remove", scope: "decidim.forms.admin.questionnaires.response_option") %></span>
        </button>
      <% end %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%=
        form.translated(
          :text_field,
          :body,
          tabs_id: tabs_id_for_question_response_option(question, answer_option),
          label: t("statement", scope: "decidim.forms.admin.questionnaires.response_option"),
          disabled: !editable
        )
      %>
    </div>
  </div>

  <% if answer_option.persisted? %>
    <%= form.hidden_field :id, disabled: !editable %>
  <% end %>

  <%= form.hidden_field :deleted, disabled: !editable %>
</div>
