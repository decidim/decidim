<div class="form__wrapper">
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title flex items-center justify-between my-4">
        <%= t("decidim.elections.admin.dashboard.questions.title") %>
        <%= link_to edit_questions_election_path(election), class: "flex items-end justify-between gap-x-3" do %>
          <span class="border-b-2"><%= icon "pencil-line", class: "!w-4 !h-4" %></span>
          <span class="border-b-2 text-sm"><%= t("actions.edit", scope: "decidim.admin") %></span>
        <% end %>
      </h2>
    </div>

    <div class="card-section">
      <div class="row column mb-2">
        <% election_questions.limit(3).each do |question| %>
          <div class="card mb-4">
            <div class="row column">
              <h6 class="pt-4 mb-2">
                <span><%= t("decidim.forms.question_types.#{question.question_type}") %></span> -
                <span class="h6"><%= t("decidim.elections.admin.dashboard.questions.labels.question_title", number: question.position.next) %></span>
              </h6>
              <p class="mb-2"><%= translated_attribute(question.body) %></p>
              <%= t("decidim.elections.admin.dashboard.questions.labels.answers") %>:
              <ul>
                <% question.response_options.each_with_index do |option, opt_index| %>
                  <li><%= "#{("a".ord + opt_index).chr})" %> <%= translated_attribute(option.body) %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <% if election.questions.count > 3 %>
          <p class="mt-4 text-gray-2"><%= t("decidim.elections.admin.dashboard.questions.limit_info") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
