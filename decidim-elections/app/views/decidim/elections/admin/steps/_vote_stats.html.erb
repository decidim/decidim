<div class="card" data-vote-status="<%= election.bb_status %>">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
    </h2>
  </div>
  <div class="table-scroll">
    <% if vote_stats.values.sum == 0 %>
      <div class="card-section">
        <p><%= t(".no_vote_statistics_yet") %></p>
      </div>
    <% else %>
    <table class="table-list users_count">
      <thead>
        <tr>
          <th></th>
          <th><%= t(".votes") %></th>
          <th><%= t(".voters") %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
          <td><%= vote_stats[:votes] %></td>
          <td><%= vote_stats[:voters] %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>
