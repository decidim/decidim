<% add_decidim_page_title(t(".title")) %>
<div class="card">
  <div class="item_show__header">
    <h1 class="item_show__header-title">
      <%= t(".title") %>
    </h1>
  </div>

  <div class="table-stacked mt-8">
    <table class="table-list">
      <%= render partial: "elections-thead" %>
      <tbody>
        <%= render partial: "decidim/elections/admin/elections/election-tr",
                   collection: trashable_deleted_collection,
                   as: :election,
                   locals: { view: :deleted } %>
      </tbody>
    </table>
  </div>
</div>

<%= decidim_paginate trashable_deleted_collection %>
