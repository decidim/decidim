<% add_decidim_page_title(t(".title")) %>

<%= render "decidim/elections/admin/elections/tabs_menu" do %>
  <%= link_to t("publish", scope: "decidim.elections.admin.elections.form"),
              publish_election_path(@election),
              method: :put,
              class: "main-tabs-menu__cta-button",
              data: { confirm: t("publish_confirm", scope: "decidim.elections.admin.dashboard") } %>
<% end %>

<div class="item_show__header">
  <h1 class="item_show__header-title">
    <%= t(".title") %>
  </h1>
</div>
<div class="item__edit-form">
  <%= render partial: "decidim/elections/admin/dashboard/main", locals: { election: @election } %>
  <%= render partial: "decidim/elections/admin/dashboard/questions", locals: { election: @election } %>
  <%= render partial: "decidim/elections/admin/dashboard/census", locals: { election: @election } %>
</div>
