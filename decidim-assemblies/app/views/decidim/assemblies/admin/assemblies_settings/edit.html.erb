<% add_decidim_page_title(t("decidim.assemblies.admin.assemblies_settings.form.title")) %>
<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults edit_assemblies_settings" }, url: assemblies_settings_path, method: :put) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
        <%= f.submit t(".update"), class: "button button__sm md:button__lg button__secondary" %>
      </div>
    <% end %>
  </div>
</div>
