<% add_decidim_page_title(t("assemblies.new.title", scope: "decidim.admin")) %>

<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t "assemblies.new.title", scope: "decidim.admin" %>
  </h2>
</div>

<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("title", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "title"), class: "item__edit-menu-anchor" %>
      <%= link_to t("duration", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "duration"), class: "item__edit-menu-anchor" %>
      <%= link_to t("images", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "images"), class: "item__edit-menu-anchor" %>
      <%= link_to t("metadata", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "metadata"), class: "item__edit-menu-anchor" %>
      <%= link_to t("filters", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "filters"), class: "item__edit-menu-anchor" %>
      <%= link_to t("visbility", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "visbility"), class: "item__edit-menu-anchor" %>
      <%= link_to t("other", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.new_assembly_path(current_participatory_space, anchor: "other"), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form new_assembly assembly_form_admin" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("assemblies.new.create", scope: "decidim.admin"), class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
