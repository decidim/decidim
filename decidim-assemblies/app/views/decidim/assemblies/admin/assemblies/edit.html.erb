<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("info", scope: "decidim.admin.menu.participatory_processes_submenu") %>
  </h2>
</div>
<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.assemblies.admin.assemblies.form") %>
      </p>
      <%= link_to t("title", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "title"), class: "item__edit-menu-anchor" %>
      <%= link_to t("duration", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "duration"), class: "item__edit-menu-anchor" %>
      <%= link_to t("images", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "images"), class: "item__edit-menu-anchor" %>
      <%= link_to t("metadata", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "metadata"), class: "item__edit-menu-anchor" %>
      <%= link_to t("filters", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "filters"), class: "item__edit-menu-anchor" %>
      <%= link_to t("visbility", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "visbility"), class: "item__edit-menu-anchor" %>
      <%= link_to t("other", scope: "decidim.assemblies.admin.assemblies.form"), decidim_admin_assemblies.edit_assembly_path(current_participatory_space, anchor: "other"), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults edit_assembly assembly_form_admin" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("assemblies.edit.update", scope: "decidim.admin"), class: "button button__sm button__secondary" %>

          <% if allowed_to? :publish, :assembly, assembly: current_assembly %>
            <% if current_assembly.published? %>
              <%= link_to t("actions.unpublish", scope: "decidim.admin"), assembly_publish_path(current_assembly), method: :delete, class: "button button__sm button__secondary" %>
            <% else %>
              <%= link_to t("actions.publish", scope: "decidim.admin"), assembly_publish_path(current_assembly), method: :post, class: "button button__sm button__secondary" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
