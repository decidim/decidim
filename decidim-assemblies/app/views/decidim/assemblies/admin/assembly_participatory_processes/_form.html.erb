<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row">
      <div class="columns xlarge-4">
        <% if processes_for_select %>
          <%= form.select :participatory_process_id, processes_for_select, {}, { multiple: false, class: "chosen-select" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
