<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row">
      <div class="columns xlarge-4">
        <% if processes_for_select %>
          <%= form.select :participatory_process_id,
                          options_for_select(processes_for_select,
                          selected: @current_assembly_participatory_process.try(:participatory_process).try(:id),
                          disabled: disabled_processes_for_select),
                          { include_blank: t('assembly_participatory_processes.placeholder_participatory_process', scope: "decidim.admin") },
                          { multiple: false, class: "chosen-select" } %>
        <% end %>
        <%= form.hidden_field :assembly_id, value: current_assembly.id %>
      </div>
    </div>
  </div>
</div>
