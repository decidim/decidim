<%= javascript_import_module_tag "src/decidim/assemblies/admin" %>

<div class="card" id="assemblies">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <div class="row">
        <div class="column xlarge-8">
          <%= form.translated :text_field, :title, autofocus: true %>
        </div>
        <div class="column xlarge-4 slug">
          <%= form.text_field :slug %>
          <p class="help-text"><%== t(".slug_help", url: decidim_form_slug_url(:assemblies, form.object.slug)) %></p>
        </div>
      </div>
      <div class="card">
        <div class="card-divider">
          <legend><%= select %></legend>
        </div>
        <div class="card-section">
          <div class="row">
            <div class="columns xlarge-3">
              <%= form.check_box :copy_categories %>
            </div>

            <div class="columns xlarge-6">
              <%= form.check_box :copy_components %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
