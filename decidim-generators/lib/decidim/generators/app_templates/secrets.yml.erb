      enabled: <%%= Decidim::Env.new("OMNIAUTH_TWITTER_API_KEY").to_boolean_string %>
      api_key: <%%= ENV["OMNIAUTH_TWITTER_API_KEY"] %>
      api_secret: <%%= ENV["OMNIAUTH_TWITTER_API_SECRET"] %>
      icon_path: "media/images/twitter-x.svg"
