<h2 class="h3">Forgot your password?</h2>

<%= decidim_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: %>

  <div class="form__wrapper">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form__wrapper-block">
    <%= f.submit "Send me reset password instructions", class: "button button__sm md:button__lg md:button__lg button__secondary" %>
  </div>
<% end %>

<%= render "decidim/system/devise/shared/links" %>
