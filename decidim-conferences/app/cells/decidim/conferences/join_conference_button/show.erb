<% if model.can_be_joined_by?(current_user) %>
  <% if model.has_registration_for? current_user %>
    <%= action_authorized_button_to(
      :join,
      conference_conference_registration_path(model),
      method: :delete,
      class: "#{button_classes} secondary light",
      data: { disable: true }
    ) do %>
      <%= icon("check", class: "icon--small") %>
      <%= t("going", scope: "decidim.conferences.conferences.show") %>
    <% end %>
  <% else %>
    <%= render :registration_confirm %>
    <%= action_authorized_button_to(
      :join,
      i18n_join_text,
      "",
      class: button_classes,
      disabled: !model.has_available_slots?,
      data: { open: current_user.present? ? "conference-registration-confirm-#{model.id}" : "loginModal" }
    ) %>
  <% end %>
  <% if shows_remaining_slots? %>
    <span><%= t("remaining_slots", scope: "decidim.conferences.conferences.show", count: model.remaining_slots) %></span>
  <% end %>
<% end %>
