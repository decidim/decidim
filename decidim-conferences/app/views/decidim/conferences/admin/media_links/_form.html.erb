<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :title %>
    </div>

    <div class="row column">
      <%= form.url_field :link %>
    </div>

    <div class="row column">
      <%= form.date_field :date %>
    </div>

    <div class="row column">
      <%= form.number_field :weight %>
    </div>
  </div>
</div>
