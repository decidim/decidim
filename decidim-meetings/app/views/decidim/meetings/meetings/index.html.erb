<div style="height: 500px;" id="mapid"></div>
<script>
  var map = L.map('mapid').setView([44, 2], 13);
  L.tileLayer.here({
    appId: 'cBAhW024awh3maEKSe1g',
    appCode: '_LzlwfdbJ70EY1-BIOBsLg'
  }).addTo(map);
</script>

