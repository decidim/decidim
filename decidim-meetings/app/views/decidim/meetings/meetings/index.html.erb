<%= render partial: "decidim/meetings/shared/index", locals: {
  display_map: current_component.settings.maps_enabled? && search.result.not_online.exists?,
  calendar_url: year_calendar_meetings_path,
  search_variable: :search_text_cont,
  filter_options: {
    date: !@forced_past_meetings,
    type: true,
    scopes: current_component.has_subscopes?,
    categories: current_component.categories.any?,
    origin: component_settings.creation_enabled_for_participants?,
    space_type: false,
    activity: current_user.present?
  }
} %>
<%= turbo_frame_tag "meeting_frame", data: { filtered_path: meetings_path(filter: filter_params.compact_blank) } %>
