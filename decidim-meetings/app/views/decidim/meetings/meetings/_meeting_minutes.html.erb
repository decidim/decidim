<div class="section minutes-section">
  <h3 class="section-heading"><%= t(".meeting_minutes") %></h3>
  <% if translated_attribute(meeting.minutes.description).present? %>
    <div class="card">
      <div class="card-section">
        <div class="row column">
          <%= decidim_sanitize translated_attribute meeting.minutes.description %>
        </div>
      </div>
    </div>
  <% end %>

  <% if meeting.minutes.video_url.presence || meeting.minutes.audio_url.presence %>
    <div class="section">
      <h4 class="section-heading"><%= t(".related_information") %></h4>
      <div class="card card--list">
        <% if meeting.minutes.video_url.presence %>
          <div class="card--list__item">
            <div class="card--list__text">
              <div>
                <%= link_to meeting.minutes.video_url, meeting.minutes.video_url, target: "_blank" %>
              </div>
            </div>
            <div class="card--list__data">
              <%= link_to meeting.minutes.video_url, target: "_blank", class: "card--list__data__icon" do %>
                <%= icon "external-link" %>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if meeting.minutes.video_url.presence %>
          <div class="card--list__item">
            <div class="card--list__text">
              <div>
                <%= link_to meeting.minutes.audio_url, meeting.minutes.audio_url, target: "_blank" %>
              </div>
            </div>
            <div class="card--list__data">
              <%= link_to meeting.minutes.audio_url, target: "_blank", class: "card--list__data__icon" do %>
                <%= icon "external-link" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
