<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :editor, :closing_report, autofocus: true, rows: 15 %>
    </div>

    <div class="row column">
      <%= form.text_area :attending_organizations, rows: 5 %>
    </div>

    <div class="row">
      <div class="columns xlarge-6">
        <%= form.number_field :attendees_count, min: 0 %>
      </div>

      <div class="columns xlarge-6">
        <%= form.number_field :contributions_count, min: 0 %>
      </div>
    </div>
    <div class="row column">
      <%= proposals_picker(form, :proposals, proposals_picker_meeting_meeting_closes_path(meeting)) %>
    </div>
  </div>
</div>
