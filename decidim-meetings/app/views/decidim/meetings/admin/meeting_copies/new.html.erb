<% add_decidim_page_title(t("meeting_copies.new.title", scope: "decidim.admin")) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("meeting_copies.new.title", scope: "decidim.admin") %>
  </h2>
</div>
<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <%= decidim_form_for(@form, url: meeting_copies_path(meeting), method: :post, html: { class: "form form-defaults copy_meetings " }) do |f| %>
      <%= render partial: "decidim/meetings/admin/meetings/form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t("meeting_copies.new.copy", scope: "decidim.admin"), class: "button button__sm button__secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
