<div class="card" id="meetings">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column" >
      <%= form.text_field :address %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location_hints %>
    </div>

    <div class="row" >
      <div class="columns xlarge-6" >
        <%= form.datetime_field :start_time %>
      </div>

      <div class="columns xlarge-6" >
        <%= form.datetime_field :end_time %>
      </div>
    </div>
    <div class="row column">
      <%= form.check_box :has_conciliation_service %>
    </div>

    <div class="row column" id="conciliation_service_description" >
      <%= form.translated :text_field, :conciliation_service_description %>
    </div>

    <div class="row column">
      <%= form.check_box :has_space_adapted_for_functional_diversity %>
    </div>

    <div class="row column">
      <%= form.check_box :has_simultaneous_translations %>
    </div>

    <div class="row column" id="simultaneous_languages">
      <%= form.translated :text_field, :simultaneous_languages %>
    </div>
  </div>
</div>
