<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t ".title" %></h2>
  </div>

  <div class="card-section">
    <%=  decidim_form_for(@form) do |f| %>
      <%= render partial: 'form', object: f %>

      <div class="actions">
        <%= f.submit t(".create") %>
      </div>
    <% end %>
  </div>
</div>
