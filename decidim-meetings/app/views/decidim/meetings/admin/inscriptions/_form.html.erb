<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
      <span class="exports dropdown tiny button button--simple button--title" data-toggle="export-dropdown"><%= t "actions.export", scope: "decidim.admin" %></span>
      <div class="dropdown-pane" id="export-dropdown" data-dropdown data-auto-focus="true" data-close-on-click="true">
        <ul class="vertical menu add-features">
          <% %w{csv json}.each do |format| %>
            <li class="exports--format--<%= format %> exports--inscriptions"><%= link_to t("decidim.admin.exports.export_as", name: t("decidim.#{current_feature.manifest.name}.admin.exports.inscriptions"), export_format: format.upcase), export_meeting_inscriptions_path(meeting_id: meeting, format: format) %></li>
          <% end %>
        </ul>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.check_box :inscriptions_enabled %>
    </div>

    <div class="row column">
      <p><%= t(".inscriptions_count", count: meeting.inscriptions.count) %></p>
      <%= form.number_field :available_slots %>
      <p class="help-text"><%= t(".available_slots_help") %></p>
    </div>

    <div class="row column">
      <%= form.translated :editor, :inscription_terms %>
    </div>
  </div>
</div>

<%= javascript_include_tag "decidim/meetings/admin/inscriptions_form" %>