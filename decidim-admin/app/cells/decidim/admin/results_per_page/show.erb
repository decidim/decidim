<ul class="dropdown menu" data-dropdown-menu data-close-on-click-inside="false">
  <li class="is-dropdown-submenu-parent">
    <a title="<%= %(#{per_page} #{t("decidim.admin.actions.per_page")}) %>">
      <%= per_page %>
    </a>

    <ul class="menu">
      <% per_page_range.each do |num_per_page| %>
