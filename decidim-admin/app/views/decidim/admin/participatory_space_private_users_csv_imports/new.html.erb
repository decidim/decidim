<div class="card" id='user-groups'>
  <div class="card-divider">
    <h2 class="card-title">
      <%= t ".title" %>
    </h2>
  </div>
  <div class="card-section">
    <%= decidim_form_for(@form, url: participatory_space_private_users_csv_import_path, html: { class: "form", onsubmit: "return confirm('"+t(".confirm_dialog")+"');"}) do |form| %>
      <p><%= t(".explanation") %></p>
      <div class="row column">
        <%= form.upload :file, optional: false %>
      </div>

      <div class="row column delete-current" >
        <%= form.check_box :delete_current_private_participants, label: t(".delete_current") %>
      </div>

      <div class="delete-current-warning" >
        <%= t(".delete_current_warning") %>
      </div>

      <div class="button--double form-general-submit">
        <%= form.submit t(".upload") %>
      </div>
    <% end %>
  </div>
</div>
