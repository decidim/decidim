<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t ".title" %>
  </h2>
</div>
<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <div class="form__wrapper">
      <%= decidim_form_for(@form, url: user_groups_csv_verification_path, html: { class: "form form-defaults" }) do |form| %>
        <div class="card pt-4">
          <div class="card-section">
            <div class="row column">
              <p><%= t(".explanation") %></p>
              <p><%= t(".example_file") %></p>
              <code class="code-block"><%= t(".explanation_example") %></code>
            </div>
            <div class="row column">
              <%= form.upload :file, required: true, button_class: "button button__sm button__transparent-secondary" %>
            </div>
          </div>
        </div>
        <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
          <%= form.submit t(".upload"), class: "button button__sm md:button__lg button__secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
