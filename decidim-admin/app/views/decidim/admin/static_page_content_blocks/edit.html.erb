<%= decidim_form_for(@form, html: { class: "form edit_content_block" }, url: static_page_content_block_path(params[:static_page_id], params[:id])) do |form| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title">
        <%= link_to t("menu.static_pages", scope: "decidim.admin"), decidim_admin.static_pages_path %>
        >
        <%= link_to translated_attribute(scoped_resource.title), decidim_admin.edit_static_page_path(scoped_resource.slug) %>
        >
        <%= t content_block.public_name_key %></h2>
    </div>

    <div class="card-section">
      <%= cell content_block.settings_form_cell, form, content_block: content_block %>
    </div>
  </div>

  <div class="button--double form-general-submit">
    <%= form.submit t(".update") %>
  </div>
<% end %>
