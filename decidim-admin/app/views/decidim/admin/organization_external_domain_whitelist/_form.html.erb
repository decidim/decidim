<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".homepage_external_domain_whitelist_title") %></h2>
  </div>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= ".external_domains" %></h2>
    </div>

    <div class="card-section">
      <% if form.send(:error?, :external_domains) %>
        <div class="input-field">
          <div>&nbsp;</div>
          <%= form.send(:error_and_help_text, :external_domains) %>
        </div>
      <% end %>

      <div class="external-domains">
        <%= fields_for "external_domain_whitelist[#{blank_external_url.to_param}]", blank_external_url do |external_url_form| %>
          <script type="text/template" class="decidim-template">
            <%= render "external_domain",
            form: external_url_form,
            id: blank_external_url.to_param %>
          </script>
        <% end %>

        <div class="external-domains-list">
          <% @form.external_domains.each do |external_url| %>
            <%= fields_for "external_domain_whitelist[external_domains]", external_url do |external_url_form| %>
              <%= render "external_domain",
              form: external_url_form,
              id: external_url.to_param %>
            <% end %>
          <% end %>
        </div>

        <button class="button small hollow add-external-domain"><%= ".add_external_domain" %></button>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "decidim/admin/external_domain_whitelist" %>
