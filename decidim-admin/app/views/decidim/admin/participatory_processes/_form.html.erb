<script>
 var counters = function(){
   $('input[data-length]').each(function(_index, element) {
     var $element = $(element);
     var $counterWrapper = $element.siblings('.character-counter');
     var span = $counterWrapper.children('span.counter');
     var charsLeft = $element.data('length') - $element.val().length;

     if (span) {
       if (charsLeft < 0) {
         span.addClass('too-long');
       } else {
         span.removeClass('too-long');
       }
       span.html(charsLeft);
     }
   });
 };

 $('form').on('keyup', 'input, textarea', counters);
 counters();
</script>

<style>
 .field span.too-long {
   color: red;
 }
</style>
