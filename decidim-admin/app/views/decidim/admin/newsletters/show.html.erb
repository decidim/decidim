<h3><%= t ".preview" %></h3>

<dl>
  <dt><%= t ".subject" %></dt>
  <dd><%= translated_attribute @newsletter.subject %></dd>
</dl>

<div class="email-preview">
  <div class="email-preview-inner">
    <%== @email_body %>
  </div>
</div>

<div class="actions">
  <%= button_to t(".send"), deliver_newsletter_path(@newsletter), method: :post, class: "button" %>
</div>
