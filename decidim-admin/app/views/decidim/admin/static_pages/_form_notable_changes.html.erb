<% if allowed_to? :update_notable_changes, :static_page, static_page: form.object %>
  <div class="row column">
    <%= form.check_box :changed_notably, value: false, help_text: t("changed_notably_help", scope: "decidim.admin.static_pages.edit") %>

    <% announcement_message = t("last_notable_change", scope: "decidim.admin.static_pages.edit", tos_version_formatted: @tos_version_formatted) %>
    <%= cell("decidim/announcement", announcement_message, callout_class: "warning") %>
  </div>
<% end %>
