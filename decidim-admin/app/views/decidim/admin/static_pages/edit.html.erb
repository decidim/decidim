<% add_decidim_page_title t(".title") %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t ".title" %>
  </h2>
</div>
<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults edit_static_page" }) do |f| %>
      <div class="card">
        <div class="card-divider">
          <h2 class="card-title"><%= t ".title" %></h2>
        </div>
        <div class="card-section">
          <%= render partial: "form", object: f %>

          <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
            <%= f.submit t(".update"), class: "button button__sm md:button__lg button__secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= render partial: "decidim/admin/shared/landing_page/content_blocks" if content_blocks? %>
