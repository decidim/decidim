<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "decidim.admin.titles.static_pages" %> <%= link_to t("actions.new", scope: "decidim.admin", name: t("models.static_page.name", scope: "decidim.admin")), ['new', 'static_page'], class: 'button tiny button--title new' %></h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.static_page.fields.title", scope: "decidim.admin") %></th>
            <th><%= t("models.static_page.fields.created_at", scope: "decidim.admin") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td>
                <%= link_to translated_attribute(page.title), page %><br />
              </td>
              <td>
                <%= l page.created_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <% if can? :update, page %>
                  <%= link_to ['edit', page], data: { tooltip: true, disable_hover: false }, :'aria-haspopup' => true, title: t("actions.edit", scope: "decidim.admin"), class: "action-icon edit" do %>
                    <%= icon "pencil" %>
                  <% end %>
                <% end %>

                <%= link_to decidim.page_path(page), data: { tooltip: true, disable_hover: false }, title: t("actions.view", scope: "decidim.admin.static_pages"), class: "action-icon preview" do %>
                  <%= icon "eye" %>
                <% end %>

                <% if can? :destroy, page %>
                  <%= link_to page, method: :delete, data: { tooltip: true, disable_hover: false, confirm: t("actions.confirm_destroy", scope: "decidim.admin") }, title: t("actions.destroy", scope: "decidim.admin"), class: "action-icon action-icon--remove" do %>
                    <%= icon "circle-x" %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
