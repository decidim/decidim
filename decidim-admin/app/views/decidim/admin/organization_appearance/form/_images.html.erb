<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t ".layout_appearance_title" %></h2>
  </div>
  <div class="card-section">
    <svg id="minimap" width="400" height="300" background="black">
      <rect id="body" width="380" height="280" x="10" y="56" fill="gray" />
      <rect id="tab" width="80" height="18" x="10" y="10" fill="gray" />
      <text fill="#ffffff" font-size="8" font-family="Verdana" x="32" y="24"><%= current_organization.name %></text>
      <image id="favicon" width="16" height="16" x="12" y="12" xlink:href="<%= current_organization.favicon %>"/>
      <rect id="header" width="380" height="36" x="10" y="28" fill="black"/>
      <image id="logo" width="32" height="32" x="12" y="30" xlink:href="<%= current_organization.logo %>"/>
      <image id="official_img_header" width="32" height="32" x="348" y="30" xlink:href="<%= current_organization.official_img_header %>"/>
      <rect id="footer" width="380" height="36" x="10" y="264" fill="black" />
      <image id="official_img_footer" width="32" height="32" x="10" y="266" xlink:href="<%= current_organization.official_img_footer %>"/>
    </svg>

    <div class="row">
      <div class="columns xlarge-6 preview-logo">
        <%= form.upload :logo %>
      </div>

      <div class="columns xlarge-6 preview-favicon">
        <%= form.upload :favicon %>
      </div>
    </div>

    <div class="row">
      <div class="columns xlarge-6 preview-official_img_header">
        <%= form.upload :official_img_header %>
      </div>

      <div class="columns xlarge-6 preview-official_img_footer">
        <%= form.upload :official_img_footer %>
      </div>
    </div>


    <div class="row">
      <div class="columns xlarge-6 preview-official_url">
        <%= form.text_field :official_url %>
      </div>
    </div>
  </div>
</div>