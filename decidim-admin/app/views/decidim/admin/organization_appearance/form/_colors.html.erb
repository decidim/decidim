<div class="card" data-component="accordion" id="accordion-<%= t("colors_title", scope: "decidim.admin.organization_appearance.form.colors") %>">
  <div class="card-divider">
    <button class="card-divider-button" data-open="true" data-controls="panel-<%= t("colors_title", scope: "decidim.admin.organization_appearance.form.colors") %>" type="button">
      <%= icon "arrow-right-s-line" %>
      <h2 class="card-title" id="<%= t("colors_title", scope: "decidim.admin.organization_appearance.form.colors") %>">
        <%= t("colors_title", scope: "decidim.admin.organization_appearance.form.colors") %>
      </h2>
    </button>
  </div>
  <div id="panel-<%= t("colors_title", scope: "decidim.admin.organization_appearance.form.colors") %>" class="card-section">
    <div class="row column">
      <details class="color-picker">
        <summary>
          <%= t(".title") %>
        </summary>

        <div class="color-picker__box">
          <p><%= t(".explanation") %></p>

          <label class="color-picker__label_choose">
            <%= t(".choose_color") %>
            <div id="primary-selector"></div>
          </label>

          <label class="color-picker__label_saturation" for="primary-saturation">
            <%= t(".saturation") %>
            <input id="primary-saturation" type="range" min="0" max="100">
          </label>

          <fieldset>
            <legend><%= t(".legend_html") %></legend>

            <label>
              <%= t("primary_color", scope: "activemodel.attributes.organization") %>
              <div class="color-picker__color color-picker__color_primary"></div>
              <input id="preview-primary" type="hidden">
            </label>

            <label>
              <%= t("secondary_color", scope: "activemodel.attributes.organization") %>
              <div class="color-picker__color color-picker__color_secondary"></div>
              <input id="preview-secondary" type="hidden">
            </label>

            <%# show when redesign active %>
            <% if false %>
              <label>
                <%= t("tertiary_color", scope: "activemodel.attributes.organization") %>
                <div class="color-picker__color color-picker__color_tertiary"></div>
                <input id="preview-tertiary" type="hidden">
              </label>
            <% end %>

            <button id="set-colors" class="button button__sm md:button__lg button__secondary"><%= t(".update_suggested_colors") %></button>
          </fieldset>
        </div>

      </details>

      <div class="callout warning">
        <p>
          <%= t ".colors_warning_html" %>
        </p>
      </div>
      <div class="organization-colors">
        <%= form.color_field :primary_color, value: current_organization.colors["primary"] %>
        <%= form.color_field :secondary_color, value: current_organization.colors["secondary"] %>
        <%= form.color_field :success_color, value: current_organization.colors["success"] %>
        <%= form.color_field :warning_color, value: current_organization.colors["warning"] %>
        <%= form.color_field :alert_color, value: current_organization.colors["alert"] %>
        <%= form.color_field :highlight_color, value: current_organization.colors["highlight"] %>
        <%= form.color_field :highlight_alternative_color, value: current_organization.colors["highlight-alternative"] %>
        <%= form.color_field :theme_color, value: current_organization.colors["theme"] %>
      </div>

      <% if Decidim.enable_html_header_snippets %>
        <div class="row column">
          <%= form.text_area :header_snippets %>
          <p class="help-text"><%= t(".header_snippets_help_html") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
