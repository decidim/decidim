<div class="form__wrapper">
  <h1><%= t ".title", taxonomy: translated_attribute(taxonomy.name) %></h1>

  <%= decidim_form_for(@form, url: taxonomy_elements_path(taxonomy), html: { class: "form-defaults form new_taxonomy_" }) do |f| %>
    <%= render partial: "form", object: f %>
    <div>
      <%= f.submit t(".create"), class: "button button__sm button__secondary" %>
    </div>
  <% end %>
</div>
