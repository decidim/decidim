<div class="card" style="margin-right: -15px">
  <%if @upstream%>
    <div class="card-divider">
      <h2 class="card-title">
        <%= t(".title.upstream") %>
        <div class="card__filter">
          <%= link_to t("index.unmoderated", scope: "decidim.admin.moderations"), moderations_path(moderation_type: "upstream"), class: "#{'bold' unless @moderated_or_hidden}" %>
          |
          <%= link_to t("index.moderated", scope: "decidim.admin.moderations"), moderations_path(moderated: true, moderation_type: "upstream"), class: "#{'bold' if @moderated_or_hidden}" %>
        </div>
      </h2>
    </div>
  <%= render "upstream" %>
  <%else @downstream%>
    <div class="card-divider">
      <h2 class="card-title">
        <%= t(".title.downstream") %>
        <div class="card__filter">
          <%= link_to t("actions.not_hidden", scope: "decidim.moderations"), moderations_path( moderation_type: "downstream"), class: "#{'bold' unless @moderated_or_hidden}" %>
          |
          <%= link_to t("actions.hidden", scope: "decidim.moderations"), moderations_path(hidden: true, moderation_type: "downstream"), class: "#{'bold' if @moderated_or_hidden}" %>
        </div>
      </h2>
    </div>
    <%= render "downstream" %>
  <% end %>
</div>
