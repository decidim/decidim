<% content_for :secondary_nav do %>
  <div class="secondary-nav secondary-nav--subnav">
    <ul>
      <% if can? :read, parent_scope %>
        <li <% if is_active_link?(decidim_admin.scope_scopes_path(parent_scope)) %> class="is-active" <% end %>>
          <%= aria_selected_link_to t("actions.browse", scope: "decidim.admin"), decidim_admin.scope_scopes_path(parent_scope) %>
        </li>
      <% end %>
      <% if can? :update, parent_scope %>
        <li <% if is_active_link?(decidim_admin.edit_scope_path(parent_scope)) %> class="is-active" <% end %>>
          <%= aria_selected_link_to t("actions.edit", scope: "decidim.admin"), decidim_admin.edit_scope_path(parent_scope) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>
  <div class="scope-title">
    <div class="scope-title-content">
      <%= link_to t("menu.scopes", scope: "decidim.admin"), decidim_admin.scopes_path %> &gt; 
      <%= scope_breadcrumbs(parent_scope).join(" &gt; ").html_safe %>
    </div>
  </div>
  <%= yield %>
<% end %>