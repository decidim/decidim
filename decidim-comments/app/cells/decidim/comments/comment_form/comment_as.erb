<div class="comment__as">
  <button id="dropdown-trigger-<%= comment_as_id %>" data-component="dropdown" data-target="dropdown-menu-<%= comment_as_id %>">
    <label class="mr-2 inline-block text-xs" for="<%= comment_as_id %>">
      <%= t("decidim.components.add_comment_form.form.user_group_id.your_profile") %>
    </label>
    <%= icon "arrow-down-s-line" %>
    <%= icon "arrow-up-s-line" %>
  </button>

  <ul id="dropdown-menu-<%= comment_as_id %>" class="gap-4">
    <% comment_as_options.each do |option| %>
      <li value="<%= option[1] %>" class="flex justify-between items-center">
        <div class="flex items-center gap-2">
          <div class="author__avatar-container">
            <%= image_tag option[0].avatar_url(:thumb), alt: t("decidim.author.avatar", name: option[0].name), class: "author__avatar" %>
          </div>

          <%= option[0].name %>
        </div>

        <input type="radio" name="comment[user_group_id]" value="true" class="input_button"/>
      </li>
    <% end %>
  </ul>
</div>
