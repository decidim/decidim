<div class="order-by__dropdown order-by__dropdown--right">
  <span class="order-by__text"><%= t("decidim.components.comment_order_selector.title") %></span>
  <ul class="dropdown menu"
    data-dropdown-menu="data-dropdown-menu"
    data-autoclose="false"
    data-disable-hover="true"
    data-click-open="true"
    data-close-on-click="true"
    tabindex="-1"
    role="menubar"
  >
    <li class="is-dropdown-submenu-parent opens-right" tabindex="-1" role="none">
      <a href="#" id="comments-order-menu-control"
        aria-label="<%= t("decidim.components.comment_order_selector.title") %>"
        aria-controls="comments-order-menu"
        aria-haspopup="true"
        role="menuitem"><%= t("decidim.components.comment_order_selector.title") %></a>
      <ul class="menu is-dropdown-submenu submenu first-sub vertical"
        id="language-chooser-menu"
        role="menu"
        aria-labelledby="comments-order-menu-control"
        tabindex="-1"
        data-submenu=""
      >
        <li role="none" class="is-submenu-item is-dropdown-submenu-item">
          <a href="#" tabindex="-1" role="menuitem"><%= t("decidim.components.comment_order_selector.order.best_rated") %></a>
        </li>
        <li role="none" class="is-submenu-item is-dropdown-submenu-item">
          <a href="#" tabindex="-1" role="menuitem"><%= t("decidim.components.comment_order_selector.order.recent") %></a>
        </li>
        <li role="none" class="is-submenu-item is-dropdown-submenu-item">
          <a href="#" tabindex="-1" role="menuitem"><%= t("decidim.components.comment_order_selector.order.older") %></a>
        </li>
        <li role="none" class="is-submenu-item is-dropdown-submenu-item">
          <a href="" tabindex="-1" role="menuitem"><%= t("decidim.components.comment_order_selector.order.most_discussed") %></a>
        </li>
      </ul>
    </li>
  </ul>
</div>
