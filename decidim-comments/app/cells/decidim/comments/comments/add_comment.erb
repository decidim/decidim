<div class="add-comment" id="add-comment-anchor">
  <% if user_signed_in? %>
    <%== cell("decidim/comments/comment_form", model, root_depth:) %>
  <% else %>
    <p>
      <div>
        <div class="flash flex-col warning">
          <div class="flash__message">
            <%= action_authorized_link_to("comment", t("decidim.components.add_comment_form.account_message"), "#", resource: model) %>
          </div>
        </div>
      </div>
    </p>
  <% end %>
</div>
