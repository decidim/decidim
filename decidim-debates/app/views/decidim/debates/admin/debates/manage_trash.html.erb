<% add_decidim_page_title(t(".title")) %>
<div class="card">
  <%= cell("decidim/announcement", t("decidim.admin.manage_trash.deleted_items_warning"), callout_class: "warning") %>
  <div class="item_show__header">
    <h1 class="item_show__header-title">
      <%= t(".title") %>
    </h1>
  </div>
  <div class="table-scroll">
    <table class="table-list">
      <thead>
      <tr>
        <th><%= t("models.debate.fields.title", scope: "decidim.debates") %></th>
        <th><%= t("models.debate.fields.start_time", scope: "decidim.debates") %></th>
        <th><%= t("models.debate.fields.end_time", scope: "decidim.debates") %></th>
        <%= th_resource_scope_label %>
        <th><%= t("actions.title", scope: "decidim.debates") %></th>
      </tr>
      </thead>
      <tbody>
      <% deleted_debates.each do |debate| %>
        <%= render partial: "decidim/debates/admin/debates/debate-tr", locals: { debate:, view: :deleted } %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
