<div class="columns large-3">
  <div class="m-bottom">
    <%= link_to :back do %>
      <%= icon "chevron-left", class: "icon--small" %> <%= t(".back") %>
    <% end %>
  </div>
  <div class="section">
    <p>
      <%= t(".title") %>
    </p>
  </div>
  <div class="show-for-large">
    <ol class="wizard__steps">
      <% wizard_steps.each do |wizard_step| %>
        <% if step == wizard_step %>
          <li class="step--active">
            <%= t(".#{wizard_step}") %>
          </li>
        <% else %>
          <li>
            <%= t(".#{wizard_step}") %>
          </li>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>
