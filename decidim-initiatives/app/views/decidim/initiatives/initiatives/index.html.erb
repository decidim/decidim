<% provide :meta_title, t("initiatives.index.title", scope: "decidim") %>
<main class="wrapper">
  <div class="row columns">
    <div class="title-action">
      <%= render partial: "index_header" %>
    </div>
  </div>

  <div class="row">
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
    <div id="initiatives" class="columns mediumlarge-8 large-9">
      <%= render partial: "initiatives" %>
    </div>
  </div>
</main>

<%= javascript_include_tag "decidim/filters" %>
<%= javascript_include_tag "decidim/orders" %>
<%= stylesheet_link_tag "decidim/initiatives/application" %>
