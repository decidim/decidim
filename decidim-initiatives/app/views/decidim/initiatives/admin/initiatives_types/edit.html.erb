<% add_decidim_page_title(translated_attribute(current_initiative_type.title)) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t "decidim.admin.titles.initiatives_types" %>
  </h2>
</div>

<div class="item__edit item__edit-1col">
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form edit_initiative_type" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t(".update"), class: "button button__sm button__secondary" %>

          <% if allowed_to? :destroy, :initiative_type, initiative_type: current_initiative_type %>
            <%= link_to t(".destroy"), current_initiative_type,
                        method: :delete,
                        class: "button button__sm button__secondary",
                        data: { confirm: t(".confirm_destroy") } %>
          <% end %>
        </div>
      </div>
      <%= render partial: "initiative_type_scopes", locals: { initiative_type: current_initiative_type } %>
    <% end %>
  </div>
</div>
