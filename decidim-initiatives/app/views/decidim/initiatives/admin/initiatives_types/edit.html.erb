<% add_decidim_page_title(translated_attribute(current_initiative_type.title)) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t "decidim.admin.titles.initiatives_types" %>
  </h2>
</div>

<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.assemblies.admin.assemblies.form") %>
      </p>
      <%= link_to t("initiatives_types.form.title", scope: "decidim.initiatives.admin"), edit_initiatives_type_path(anchor: "title"), class: "item__edit-menu-anchor" %>
      <%= link_to t("initiatives_types.form.options", scope: "decidim.initiatives.admin"), edit_initiatives_type_path(anchor: "options"), class: "item__edit-menu-anchor" %>
      <%= link_to t("initiatives_types.form.authorizations", scope: "decidim.initiatives.admin"), edit_initiatives_type_path(anchor: "authorizations"), class: "item__edit-menu-anchor" %>
      <%= link_to t("initiatives_types.initiative_type_scopes.title", scope: "decidim.initiatives.admin"), edit_initiatives_type_path(anchor: "initiative_type_scopes"), class: "item__edit-menu-anchor" %>
    </div>
  </div>
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form-defaults form edit_initiative_type" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="item__edit-sticky">
        <div class="item__edit-sticky-container">
          <%= f.submit t(".update"), class: "button button__sm button__secondary" %>
        </div>
      </div>
      <%= render partial: "initiative_type_scopes", locals: { initiative_type: current_initiative_type } %>
    <% end %>
  </div>
</div>
