<%
@title = "Decidim Admin"
@activesection = "processes"
@activepage = "process-components"
@activesubpage = "component-meetings-minutes-edit"
%>

<%= partial "template_top" %>
<div class="layout-nav">
  <%= partial "process_sub_nav" %>
</div>
<div class="layout-content has-process-title">
  <div class="container">
    <%= partial "process_title" %>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          <div class="grid-x align-middle">
            Nombre del meeting&nbsp;<%= icon "arrow-right" %>&nbsp;Minutos
          </div>
        </h2>
      </div>
      <div class="card-section">
        <!-- Replace all this with the correspondent library / markup -->
        <div class="grid-y" style="height: 50vh">
          <div class="callout warning">
            Esto es una simple idea del resultado final. Reemplazar todo este contenido por el editor colaborativo correspondiente.
          </div>
          <div class="editor">
            <div class="editor-container">
              Introducir aquí el editor deseado
            </div>
          </div>
        </div>
        <!-- end div -->
      </div>
    </div>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          <div class="grid-x align-middle">
            Nombre del meeting&nbsp;<%= icon "arrow-right" %>&nbsp;Minutos
          </div>
        </h2>
      </div>
      <div class="card-section">
        <form class="form grid-container">
          <div class="grid-x">
            <div class="cell">
              <% content_for :label, flush: true do %>
                <label for="">Lista de organizaciones que asistieron *</label>
              <% end %>
              <% content_for :content, flush: true do %>
                <textarea rows="6"></textarea>
              <% end %>
              <%= render layout: "admin/components/lang-tabs" do %><% end %>
            </div>
          </div>
          <div class="grid-x grid-padding-x">
            <div class="cell medium-6">
              <label>Número de asistentes *</label>
              <input type="text" />
            </div>
            <div class="cell medium-6">
              <label>Número de contribuyentes</label>
              <input type="text" />
            </div>
          </div>
          <div class="grid-x grid-padding-x">
            <div class="cell">
              <label>Propuestas creadas en el meeting</label>
              <textarea rows="6"></textarea>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="grid-x align-center mt-sm">
      <button class="button alert light">Cerrar meeting</button>
    </div>
  </div>
</div>
<%= partial "template_bottom" %>
