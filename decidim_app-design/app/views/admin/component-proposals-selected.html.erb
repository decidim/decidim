<%
@title = "Decidim Admin"
@activesection = "processes"
@activepage = "process-components"
@activesubpage = "component-proposals"
%>

<%= partial 'template_top' %>
<div class="layout-nav">
  <%= partial 'process_sub_nav' %>
</div>
<div class="layout-content has-process-title">
  <div class="container">
    <%= partial 'process_title' %>
    <%= partial 'filter_table' %>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title flex--sbc">
          <div>
            Propuestas&nbsp;<span class="component-counter component-counter--inline">1</span>
          </div>
          <div class="flex--cc flex-gap--1">
            <button type="button" class="button tiny alert light">Borrar</button>
            <button type="button" class="button tiny">Nuevo</button>
            <button type="button" class="button tiny">Exportar <%= icon "caret-bottom", class: "icon--small" %></button>
          </div>
        </h2>
      </div>
      <div class="card-section">
        <table class="table-list table-list--lastcenter">
            <thead>
              <tr>
                <th><input type="checkbox"></th>
                <th>id</th>
                <th>title</th>
                <th>categor√≠a</th>
                <th>scope</th>
                <th>estado</th>
                <th>votos</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
              <% 3.times do %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><%= Faker::Number.digit %></td>
                  <td><%= Faker::FamilyGuy.quote %></td>
                  <td><%= Faker::Food.dish %></td>
                  <td><%= Faker::Cat.name %></td>
                  <td class="warning">not answered</td>
                  <td><%= Faker::Number.between(1, 10) %></td>
                  <td class="muted"><%= icon "comment-square", class: "icon--small" %></td>
                </tr>
              <% end %>
              <tr class="selected"><!-- selected class in row -->
                <td><input type="checkbox" checked></td>
                <td><%= Faker::Number.digit %></td>
                <td><%= Faker::FamilyGuy.quote %></td>
                <td><%= Faker::Food.dish %></td>
                <td><%= Faker::Cat.name %></td>
                <td class="warning">not answered</td>
                <td><%= Faker::Number.between(1, 10) %></td>
                <td class="muted"><%= icon "comment-square", class: "icon--small" %></td>
              </tr>
              <% 2.times do %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><%= Faker::Number.digit %></td>
                  <td><%= Faker::FamilyGuy.quote %></td>
                  <td><%= Faker::Food.dish %></td>
                  <td><%= Faker::Cat.name %></td>
                  <td class="warning">not answered</td>
                  <td><%= Faker::Number.between(1, 10) %></td>
                  <td class="muted"><%= icon "comment-square", class: "icon--small" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
<%= partial 'template_bottom' %>

<script type="text/javascript">
  // NOTE: Remove script when integration; it's only to see the checkbox indeterminate state
  window.onload = onPageLoad();

  function onPageLoad() {
    $('th [type="checkbox"]')[0].indeterminate = true;
  }
</script>