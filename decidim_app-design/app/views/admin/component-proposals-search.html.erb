<%
@title = "Decidim Admin"
@activesection = "processes"
@activepage = "process-components"
@activesubpage = "component-proposals"
%>

<%= partial 'template_top' %>
<div class="layout-nav">
  <%= partial 'process_sub_nav' %>
</div>
<div class="layout-content has-process-title">
  <div class="container">
    <%= partial 'process_title' %>
    <div class="filters__section">
      <div>
        Filter by: <a href="">All <%= icon "caret-bottom", class: "icon--small" %></a>
      </div>
      <div>
        <span class="text-alert">
          <%= icon "x", class: "icon--small" %>
           Clear current queries and filters
        </span>
      </div>
      <div>
        <form class="filters__search">
          <div class="input-group">
            <input class="input-group-field" type="search" placeholder="Buscar">
            <div class="input-group-button">
              <button type="submit" class="button button--muted">
                <%= icon "magnifying-glass", aria_label: "Buscar", role: "img" %>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">Propuestas <a href="#" class="button tiny button--title">Exportar <%= icon "caret-bottom", class: "icon--small" %></a><a href="#" class="button tiny button--title">Nuevo</a></h2>
      </div>
      <div class="card-section">
        <table class="table-list table-list--lastcenter">
            <thead>
              <tr>
                <th><input type="checkbox"></th>
                <th>id</th>
                <th>title</th>
                <th>categor√≠a</th>
                <th>scope</th>
                <th>estado</th>
                <th>votos</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
              <% 6.times do %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><%= Faker::Number.digit %></td>
                  <td><%= Faker::FamilyGuy.quote %></td>
                  <td><%= Faker::Food.dish %></td>
                  <td><%= Faker::Cat.name %></td>
                  <td class="warning">not answered</td>
                  <td><%= Faker::Number.between(1, 10) %></td>
                  <td class="muted"><%= icon "comment-square", class: "icon--small" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
<%= partial 'template_bottom' %>
