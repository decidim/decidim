<%
@title = "Decidim Admin"
@activesection = "processes"
@activepage = "process-components"
@activesubpage = "component-proposals"
%>

<%= partial "template_top" %>
<div class="layout-nav">
  <%= partial "process_sub_nav" %>
</div>
<div class="layout-content has-process-title">
  <div class="container">
    <%= partial "process_title" %>
    <%= partial "filter_table" %>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title flex--sbc">
          <div>
            Propuestas&nbsp;<span class="component-counter component-counter--inline">5</span>
          </div>
          <div class="flex--cc flex-gap--1">
            <button class="button tiny success light" type="button" data-toggle="actions-bottom-right">Acciones <%= icon "caret-bottom", class: "icon--small" %></button>
            <div class="dropdown-pane" data-position="bottom" data-alignment="right" id="actions-bottom-right" data-dropdown data-auto-focus="true">
              <ul class="list-reset">
                <li><a href="">Canviar categoria</a></li>
                <% 2.times do %><li>Cat: <%= Faker::Ancient.hero %></li><% end %>
                <li><a href="" class="text-alert">Esborrar</a></li>
              </ul>
            </div>
            <button class="button tiny" type="button">Nuevo</button>
            <button class="button tiny" type="button">Exportar <%= icon "caret-bottom", class: "icon--small" %></button>
          </div>
        </h2>
      </div>
      <div class="card-section">
        <table class="table-list table-list--lastcenter">
            <thead>
              <tr>
                <th><input type="checkbox" checked></th>
                <th>id</th>
                <th>title</th>
                <th>categor√≠a</th>
                <th>scope</th>
                <th>estado</th>
                <th>votos</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
              <% 6.times do %>
                <tr class="selected">
                  <td><input type="checkbox" checked></td>
                  <td><%= Faker::Number.digit %></td>
                  <td><%= Faker::TvShows::FamilyGuy.quote %></td>
                  <td><%= Faker::Food.dish %></td>
                  <td><%= Faker::Creature::Cat.name %></td>
                  <td class="warning">not answered</td>
                  <td><%= Faker::Number.between(from: 1, to: 10) %></td>
                  <td class="muted"><%= icon "comment-square", class: "icon--small" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
<%= partial "template_bottom" %>
