<%
@title = "Decidim Admin"
@activesection = "settings"
@activepage = "settings-scopes"
%>

<%= partial "template_top" %>
<div class="layout-nav">
  <%= partial "settings_nav" %>
</div>
<div class="layout-content">
  <div class="container">
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">Modificar ámbito</h2>
      </div>
      <div class="card-section">
        <div class="row column">
          <div class="label--tabs"><label for="scope_name">Name</label><ul class="tabs tabs--lang" id="scope-name-tabs" data-tabs="true" role="tablist"><li class="tabs-title is-active" role="presentation"><a href="#name-panel-0" role="tab" aria-controls="name-panel-0" aria-selected="true" id="name-panel-0-label">English</a></li><li class="tabs-title" role="presentation"><a href="#name-panel-1" role="tab" aria-controls="name-panel-1" aria-selected="false" id="name-panel-1-label">Català</a></li><li class="tabs-title" role="presentation"><a href="#name-panel-2" role="tab" aria-controls="name-panel-2" aria-selected="false" id="name-panel-2-label">Castellano</a></li></ul></div><div class="tabs-content" data-tabs-content="scope-name-tabs"><div class="tabs-panel is-active" id="name-panel-0" role="tabpanel" aria-hidden="false" aria-labelledby="name-panel-0-label"><input value="Barcelona" name="scope[name_en]" id="scope_name_en" type="text" /></div><div class="tabs-panel" id="name-panel-1" role="tabpanel" aria-hidden="true" aria-labelledby="name-panel-1-label"><input value="Barcelona" name="scope[name_ca]" id="scope_name_ca" type="text" /></div><div class="tabs-panel" id="name-panel-2" role="tabpanel" aria-hidden="true" aria-labelledby="name-panel-2-label"><input value="Barcelona" name="scope[name_es]" id="scope_name_es" type="text" /></div>
        </div>

        <div class="row">
          <div class="columns xlarge-6">
            <label for="scope_code">Código<input required="required" value="BA" name="scope[code]" id="scope_code" type="text" /><span class="form-error">There's an error in this field.</span></label>
          </div>
          <div class="columns xlarge-6">
            <label for="scope_scope_type_id">Tipo de ámbito<select name="scope[scope_type_id]" id="scope_scope_type_id"><option value="2">municipio</option>
            <option selected="selected" value="1">provincia</option></select></label>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="button--double form-general-submit">
    <button type="submit" name="commit" class="button">Guardar</button>
    <%= link_to "Cancelar", page_path("scope-browse"), class: "Cancelar" %>
  </div>
</div>
<%= partial "template_bottom" %>
