%>

<%= partial "template_top" %>
<div class="layout-nav">
  <%= partial "process_nav" %>
</div>
<div class="layout-content">
  <div class="container">
    <form class="form">
      <h2 class="process-title-summary">Nuevo proceso - Componentes <span class="text-muted float-right">Paso 3 de 3</span></h2>
      <div class="card card--collapsed" id="component-1" data-toggler=".card--collapsed">
        <div class="card-divider">
          <a data-toggle="component-1" class="float-right text-muted">
            <span class="card__icon-open"><%= icon "chevron-bottom" %></span>
            <span class="card__icon-close"><%= icon "chevron-top" %></span>
          </a>
          <h2 class="card-title"><%= icon "meetings", class: "icon--component" %> Componente: Encuentros</h2>
        </div>
        <div class="card-section">
          <div class="row column">
            <div class="label--tabs">
              <label for="process_title">
                Título de componente
              </label>
              <ul class="tabs tabs--lang" data-tabs id="example-tabs-enc">
                <li class="tabs-title is-active"><a href="#desc-1-enc" aria-selected="true">CA</a></li>
                <li class="tabs-title"><a href="#desc-2-enc">ES</a></li>
                <li class="tabs-title"><a href="#desc-3-enc">EN</a></li>
              </ul>
            </div>
            <div class="tabs-content" data-tabs-content="example-tabs">
              <div class="tabs-panel is-active" id="desc-1-enc">
                <input type="text" value="Propostes" />
              </div>
              <div class="tabs-panel" id="desc-2-enc">
                <input type="text" value="Propuestas" />
              </div>
              <div class="tabs-panel" id="desc-3-enc">
                <input type="text" value="Proposals" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="columns xlarge-6">
              <label for="component_weight-enc">
                Posición en la navegación
              </label>
              <select id="component_weight-enc">
                <option>Normal</option>
                <option>Al principio/destacado</option>
                <option>Al final</option>
              </select>
            </div>
          </div>
          <div class="row column">
            <fieldset class="form-group">
              <h3 class="legend">
                Configuración global
              </h3>
              <div class="row">
                <div class="columns xlarge-6">
                  <div class="check-radio">
                    <label>
                      <input type="checkbox" />
                      Comentarios habilitados siempre
                    </label>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="columns xlarge-6">
                  <label for="vote-limit-enc">Límite de votos</label>
                  <input type="number" id="vote-limit-enc" value="0" />
                </div>
              </div>
            </fieldset>
          </div>
          <div class="row">
            <div class="columns xlarge-6">
              <label for="component_phase">
                Componente activo a partir de la fase
              </label>
              <select id="component_phase">
                <option selected>Fase 1: Informació</option>
                <option>Fase 2: Recollida de propostes</option>
                <option>Fase 3: Priorització de propostes</option>
                <option>Fase 4: Valoració i viabilitat de les propostes</option>
              </select>
            </div>
          </div>
          <div class="row column">
            <fieldset class="form-group">
              <h3 class="legend">
                Configuración Fase 1
              </h3>
              <div class="check-radio-group">
                <div class="row">
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Votos habilitados
                      </label>
                    </div>
                  </div>
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Votos bloqueados
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Comentarios habilitados
                      </label>
                    </div>
                  </div>
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Creación de propuestas habilitada
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </fieldset>
          </div>
          <div class="row column">
            <fieldset class="form-group">
              <h3 class="legend">
                Configuración Fase 2
              </h3>
              <div class="check-radio-group">
                <div class="row">
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Votos habilitados
                      </label>
                    </div>
                  </div>
                  <div class="columns xlarge-6">
                    <div class="check-radio">
                      <label>
                        <input type="checkbox" />
                        Votos bloqueados
                      </label>
                    </div>
                  </div>
                </div>
                <div class="row">
