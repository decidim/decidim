<div class="card">
  <div class="card-divider">
    <h2 class="card-title">Admin logs</h2>
  </div>
  <div class="table-scroll">
    <ul id="logs" class ".table">
      <% 10.times do |index| %>
        <li class="logs-log">
          <div class="logs-log__date">10/10/18 08:24</div>
          <div class="logs-log__content">
            <span class="logs-log__author">Matthew Mills </span>
            <%= index % 2 == 0 ? "created" : "updated" %>
            <span class="logs-log__resource">Regular meetup</span>
            in
            <span class="logs-log__space">Book Cycle</span>
          </div>
          <div class="logs-log__actions table-list__actions">
            <% if index % 2 == 1 %>
              <a href="#" class="action-icon"><%= icon "eye" %></a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
