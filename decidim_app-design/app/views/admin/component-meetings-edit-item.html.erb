<%
@title = "Decidim Admin"
@activesection = "processes"
@activepage = "process-components"
@activesubpage = "component-meetings-edit-item"
%>

<%= partial "template_top" %>
<div class="layout-nav">
  <%= partial "process_sub_nav" %>
</div>
<div class="layout-content has-process-title">
  <div class="container">
    <%= partial "process_title" %>
    <div class="card">
      <div class="card-divider">
        <h2 class="card-title">
          <div class="flex--sbc flex-gap--1">
            <div class="grid-x align-middle">
              <u>Discusi√≥n principal</u>&nbsp;<%= icon "arrow-right" %>&nbsp;Item
            </div>
            <button class="button tiny alert light" type="button">Borrar</button>
          </div>
        </h2>
      </div>
      <div class="card-section">
        <form class="form grid-container">
          <div class="grid-x">
            <div class="cell auto">
              <% content_for :label, flush: true do %>
                <label for="">Title *</label>
              <% end %>
              <% content_for :content, flush: true do %>
                <input type="text">
              <% end %>
              <%= render layout: "admin/components/lang-tabs" do %><% end %>
            </div>
            <div class="cell small-2">
              <div class="grid-container">
                <label for="">Duration *</label>
                <div class="grid-x align-middle">
                  <input class="nomargin cell auto" type="text">
                  <span class="cell auto text-muted">&nbsp;minutes</span>
                </div>
              </div>
            </div>
          </div>
          <div class="grid-x">
            <div class="cell">
              <% content_for :label, flush: true do %>
                <label for="">Description *</label>
              <% end %>
              <% content_for :content, flush: true do %>
                <textarea rows="6"></textarea>
              <% end %>
              <%= render layout: "admin/components/lang-tabs" do %><% end %>
            </div>
          </div>
          <div class="grid-x">
            <div class="cell">
              <label>Fichero</label>
              <input type="file">
            </div>
          </div>
          <div class="grid-x">
            <div class="cell">
              <ul>
                <% 2.times do %>
                <li><u><%= Faker::Games::Zelda.character %>.<%= Faker::File.extension %></u>&nbsp;<a href="" class="text-alert"><u>remove</u></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="grid-x align-center mt-sm">
      <button class="button">Actualizar</button>
    </div>
  </div>
</div>
<%= partial "template_bottom" %>
