<% level ||= 0 %>
<div class="flex--sbc">
  <strong class="text-uppercase muted">Level <%= level %></strong>
  <div class="badge-level">
    <div <%= "class=is-achieved" if level >= 1 %>></div>
    <div <%= "class=is-achieved" if level >= 2 %>></div>
    <div <%= "class=is-achieved" if level >= 3 %>></div>
    <div <%= "class=is-achieved" if level >= 4 %>></div>
    <div <%= "class=is-achieved" if level >= 5 %>></div>
  </div>
</div>
