<div class="conversation">
  <div class="conversation-header flex--cc absolutes">
    <div class="left center mr-s">
      <a href="#conversations" data-tabs-target="conversations">
        <%= icon "chevron-left", class: "card__link icon--big" %>
      </a>
    </div>
    <%= link_to page_path("user-profile") do %>
      <%= image_tag "demo-avatar.jpg" %>
    <% end %>
    <div class="ml-s">
      Conversaci√≥n con <strong><%= Faker::Name.name %></strong>
      <br />
      <span class="muted">@<%= Faker::Twitter.screen_name %></span>
    </div>
  </div>

  <% chats = Faker::Number.between(2, 5) %>
  <% chats.times do |i| %>
  <div class="conversation-chat<%= " conversation-chat--offset" if i.odd? %>">
    <%= link_to page_path("user-profile") do %>
    <%= image_tag "demo-avatar.jpg" %>
    <% end %>
    <div>
      <% Faker::Number.between(1, 3).times do %>
      <article class="card">
        <div class="p-s">
          <%= Faker::Lorem.sentence(Faker::Number.between(5, 20)) %>
        </div>
      </article>
      <% end %>
      <span class="text-small<%= " pull-right" if i.odd? %>"><%= Faker::Date.between(10.days.ago, Date.today).strftime("%-m %b") %></span>
    </div>
  </div>
  <% end %>

  <div class="conversation-reply<%= " conversation-reply--offset" if chats.even? %>">
    <h2 class="section-heading">Respuesta</h2>
    <textarea placeholder="Tu respuesta..." rows="4" cols="80"></textarea>
    <button class="button secondary light pull-right" type="button" name="button"><strong>Responder</strong></button>
  </div>

</div>
