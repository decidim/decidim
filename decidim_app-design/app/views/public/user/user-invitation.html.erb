<%= partial "template_top" %>

<main class="wrapper">
  <div class="row collapse">
    <div class="columns medium-9 medium-centered">
      <div class="card">
        <div class="card__content">
          <h3>Do you think more voices should be heard in Participa a Terrassa?</h3>
          <p>Let your friends know about this site</p>
          <form>
            <div class="row collapse mt-sm mb-s">
              <% 3.times do |i| %>
              <div class="row">
                <div class="columns medium-6">
                  <label for="">
                    Friend #<%= 2 * i + 1 %> email
                    <input placeholder="email@address.com" type="text">
                  </label>
                </div>
                <div class="columns medium-6">
                  <label for="">
                    Friend #<%= 2 * i + 2 %> email
                    <input placeholder="email@address.com" type="text">
                  </label>
                </div>
              </div>
              <% end %>
            </div>
            <div class="row collapse mb-sm">
              <div class="text-medium" data-toggle="textarea textarea-icon-bottom textarea-icon-right">
                <span id="textarea-icon-bottom" class="" data-toggler="hide"><%= icon "caret-bottom", class: "icon--small" %></span>
                <span id="textarea-icon-right" class="hide" data-toggler="hide"><%= icon "caret-right", class: "icon--small" %></span>
                Customize invitation message</div>
              <textarea id="textarea" rows="8" cols="80" data-toggler=".hide"></textarea>
            </div>
            <button type="submit" class="button expanded">Invitar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row collapse">
    <div class="columns text-center">
      <button type="submit" class="button secondary light">Visita tu perfil</button>
    </div>
  </div>
</main>

<%= partial "template_bottom" %>
