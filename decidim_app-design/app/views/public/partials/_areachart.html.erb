<% tip = true unless local_assigns.has_key?(:tip) %>
<div id="areachart-<%= SecureRandom.random_number(9999) %>"
  class="areachart <%= classes ||= "" %><%= " small" if axis ||= false %>"
  data-metric="<%= metric ||= "" %>"
  data-title="<%= title ||= "" %>"
  data-axis="<%= axis ||= false %>"
  data-ratio="<%= ratio ||= "" %>"
  data-tip="<%= tip %>"></div>
