<%= partial "template_top" %>

<main class="wrapper">
  <div class="row collapse">
    <div class="row">
      <div class="columns large-8 medium-centered">
        <div class="card">
          <div class="card__content">
            <div class="row">
              <div class="columns medium-2 text-center">
                <img src="http://via.placeholder.com/75x75" alt="" />
              </div>
              <div class="columns medium-10">
                <h3 class="heading3"><strong>Participa a Terrassa</strong>&nbsp;wants to use your account
                  <br />
                  <small class="heading-small">Ajuntament de Terrassa <a href="#">participa.terrassa.cat</a></small>
                </h3>
                <br />
