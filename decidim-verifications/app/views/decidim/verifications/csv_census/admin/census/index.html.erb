<% add_decidim_page_title(t("admin.index.title", scope: "decidim.verifications.csv_census")) %>
<div class="card">
  <div class="item_show__header item_show__header--with-action-options">
    <h1 class="item_show__header-title">
      <%= t("index.title", scope: "decidim.verifications.csv_census.admin") %>
      <% if @status.count > 0 %>
        <%= link_to t("decidim.verifications.csv_census.admin.destroy.title"), destroy_all_census_records_path, method: :delete, class: "button button__sm button__secondary alert", data: { confirm: t("decidim.verifications.csv_census.admin.destroy.confirm") } %>
      <% end %>
      <%= link_to t("index.import_csv_button", scope: "decidim.verifications.csv_census.admin"), new_import_census_records_path, method: :get, class: "button button__sm button__secondary" %>
      <%= link_to t("index.add_new_record_button", scope: "decidim.verifications.csv_census.admin"), new_census_record_path, method: :get, class: "button button__sm button__secondary" %>
    </h1>
  </div>
  <% if @status.count > 0 %>
    <%= t("index.data", scope: "decidim.verifications.csv_census.admin", count: @status.count,due_date: l(@status.last_import_at, format: :long)) %>
  <% end %>
  <div class="table-scroll mt-8">
    <table class="table-list">
      <thead>
        <tr>
          <th><%= t("index.fields.email", scope: "decidim.verifications.csv_census.admin") %></th>
          <th><%= t("index.fields.user_verification", scope: "decidim.verifications.csv_census.admin") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if csv_census_data.any? %>
          <% csv_census_data.each do |data| %>
            <tr>
              <td><%= data.email %></td>
              <td></td>
              <td class="table-list__actions">
                  <%= icon_link_to "pencil-line", edit_census_record_path(data), t("actions.edit", scope: "decidim.verifications.csv_census.admin"), class: "action-icon--edit" %>
                  <%= icon_link_to "delete-bin-line", census_record_path(data), t("actions.destroy", scope: "decidim.verifications.csv_census.admin"), method: :delete, class: "action-icon--remove", data: { confirm: t("actions.confirm_destroy", scope: "decidim.verifications.csv_census.admin") } %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <p><%= t(".empty") %></p>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= decidim_paginate csv_census_data %>
